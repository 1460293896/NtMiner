<metro:MetroWindow x:Class="NTMiner.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:controls="clr-namespace:NTMiner.Controls"
        xmlns:vm="clr-namespace:NTMiner.Vms"
        xmlns:local="clr-namespace:NTMiner.Views"
        mc:Ignorable="d"
        UseNoneWindowStyle="True"
        ResizeMode="NoResize"
        Background="White"
        BorderThickness="0.8"
        BorderBrush="{StaticResource IconFillColor}"
        WindowStartupLocation="CenterScreen"
        MouseDown="MetroWindow_MouseDown"
        Title="NTMinerFileEdit" Height="220" Width="430">
    <metro:MetroWindow.DataContext>
        <vm:LoginWindowViewModel></vm:LoginWindowViewModel>
    </metro:MetroWindow.DataContext>
    <metro:MetroWindow.Resources>
        <sys:String x:Key="Title">
            Title
        </sys:String>
        <sys:String x:Key="LblHost">
            HostLbl：
        </sys:String>
        <sys:String x:Key="LblLoginName">
            LoginNameLbl：
        </sys:String>
        <sys:String x:Key="LblPassword">
            PasswordLbl：
        </sys:String>
    </metro:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource ThemeBackground}">
            <Image Width="14" Height="14" Margin="4 0 0 0" Source="/NTMinerWpf;component/Styles/Images/logo32.png">
            </Image>
            <TextBlock Text="{DynamicResource Title}" DockPanel.Dock="Left" Foreground="{StaticResource ThemeForeground}" Margin="4 0 0 0" FontSize="14" VerticalAlignment="Center"></TextBlock>
            <WrapPanel 
                DockPanel.Dock="Right"
                HorizontalAlignment="Right">
                <controls:KbComboBox 
                    Height="26"
                    ItemsSource="{Binding LangVms.LangVms}"
                    DisplayMemberPath="Name" SelectedItem="{Binding LangVms.CurrentLangVm}"
                    SelectionChanged="CbLanguage_SelectionChanged">
                </controls:KbComboBox>
                <controls:KbButton
                    ToolTip="{x:Static local:LoginWindow.ViewId}"
                    Command="{x:Static vm:WpfStatic.ShowLangViewItems}"
                    CommandParameter="{x:Static local:LoginWindow.ViewId}"
                    Padding="4 0"
                    Background="{StaticResource ThemeBackground}"
                    Foreground="{StaticResource ThemeForeground}">
                    <WrapPanel>
                        <Path
                            Width="12"
                            Height="12"
                            Data="{StaticResource Icon_Translate}"
                            Fill="{StaticResource ThemeForeground}"
                            Stretch="Fill" />
                    </WrapPanel>
                </controls:KbButton>
                <controls:KbSystemCloseButton Height="30" />
            </WrapPanel>
        </DockPanel>
        <Grid Grid.Row="1" Background="White" Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Margin="0 2" Content="{DynamicResource LblHost}" HorizontalContentAlignment="Right" Foreground="{StaticResource LableColor}"></Label>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0 2" Text="{Binding HostAndPort}" BorderThickness="0" IsReadOnly="True" Background="White" VerticalContentAlignment="Center"></TextBox>

            <Label Grid.Row="1" Grid.Column="0" Margin="0 2" Content="{DynamicResource LblLoginName}" HorizontalContentAlignment="Right" Foreground="{StaticResource LableColor}"></Label>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0 2" Text="{Binding LoginName}" Background="White" VerticalContentAlignment="Center"></TextBox>

            <Label Grid.Row="2" Grid.Column="0" Margin="0 2" Content="{DynamicResource LblPassword}" HorizontalContentAlignment="Right" Foreground="{StaticResource LableColor}"></Label>
            <PasswordBox Grid.Row="2" Grid.Column="1" Margin="0 2" x:Name="PbPassword" VerticalContentAlignment="Center" Background="White" controls:PasswordBoxHelper.Attach="true" controls:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label 
                Grid.Row="3" Grid.Column="0" 
                Visibility="{Binding IsPasswordAgainVisible}"
                Margin="0 2" Content="重复密码" HorizontalContentAlignment="Right" Foreground="{StaticResource LableColor}"></Label>
            <PasswordBox 
                Grid.Row="3" Grid.Column="1" 
                Visibility="{Binding IsPasswordAgainVisible}"
                Margin="0 2" VerticalContentAlignment="Center" Background="White" controls:PasswordBoxHelper.Attach="true" controls:PasswordBoxHelper.Password="{Binding PasswordAgain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <WrapPanel Grid.Row="4" Grid.Column="2" Margin="0 8 0 0">
                <controls:KbButton
                    Visibility="{Binding IsPasswordAgainVisible,Converter={StaticResource VisibilityInvertConverter}}"
                    IsDefault="True"
                    Padding="10 0"
                    Command="{Binding Login}"
                    Background="{StaticResource ThemeBackground}"
                    Foreground="{StaticResource ThemeForeground}"
                    CornerRadius="2">
                    <WrapPanel>
                        <Path
                            Width="12"
                            Height="12"
                            Data="{StaticResource Icon_Ok}"
                            Fill="{StaticResource ThemeForeground}"
                            Stretch="Fill" />
                        <Label
                            VerticalAlignment="Center"
                            Foreground="{StaticResource ThemeForeground}"
                            Content="{DynamicResource Title}" />
                    </WrapPanel>
                </controls:KbButton>
                <controls:KbButton
                    Visibility="{Binding IsPasswordAgainVisible}"
                    IsDefault="True"
                    Padding="10 0"
                    Command="{Binding ActiveAdmin}"
                    Background="{StaticResource ThemeBackground}"
                    Foreground="{StaticResource ThemeForeground}"
                    CornerRadius="2">
                    <WrapPanel>
                        <Path
                            Width="12"
                            Height="12"
                            Data="{StaticResource Icon_Ok}"
                            Fill="{StaticResource ThemeForeground}"
                            Stretch="Fill" />
                        <Label
                            VerticalAlignment="Center"
                            Foreground="{StaticResource ThemeForeground}"
                            Content="激活" />
                    </WrapPanel>
                </controls:KbButton>
            </WrapPanel>
        </Grid>
        <Path
            Grid.Column="1" 
            Grid.Row="1" 
            Margin="10 20 20 0" 
            Width="120" Height="120" 
            VerticalAlignment="Top"
            Data="{StaticResource Icon_Admin}"
            Fill="{StaticResource ThemeBackground}"
            Stretch="Fill" />
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding Message}" Visibility="{Binding MessageVisible}" FontSize="14" Foreground="Red" Margin="8 4 20 20"></TextBlock>
    </Grid>
</metro:MetroWindow>
