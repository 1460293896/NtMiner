<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
	xmlns:vm="clr-namespace:NTMiner.Vms">
	<Style x:Key="WalletItemContainerStyle" TargetType="ComboBoxItem">
		<Setter  Property="Height" Value="36" />
	</Style>
	<DataTemplate x:Key="WalletAddressDataTemplate">
		<StackPanel>
			<WrapPanel>
				<TextBlock 
					Text="{Binding Name}"
					VerticalAlignment="Center"></TextBlock>
			</WrapPanel>
			<TextBlock x:Name="TbAddress" Text="{Binding Address}" Visibility="{Binding Address, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"></TextBlock>
			<TextBlock Text="" Visibility="{Binding ElementName=TbAddress, Path=Visibility, Converter={StaticResource VisibilityInvertConverter}}"></TextBlock>
		</StackPanel>
	</DataTemplate>
</ResourceDictionary>