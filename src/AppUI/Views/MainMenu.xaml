<UserControl x:Class="NTMiner.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		     xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
             xmlns:local="clr-namespace:NTMiner.Views"
		     xmlns:vm="clr-namespace:NTMiner.Vms"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    <UserControl.Resources>
        <ResourceDictionary>
            <sys:String x:Key="MihOption">
                MihOption
            </sys:String>
            <sys:String x:Key="MihCoin">
                MihCoin
            </sys:String>
            <sys:String x:Key="MihCoinGroup">
                MihCoinGroup
            </sys:String>
            <sys:String x:Key="MihKernel">
                MihKernel
            </sys:String>
            <sys:String x:Key="MihSpeedChart">
                MihSpeedChart
            </sys:String>
        </ResourceDictionary>
    </UserControl.Resources>
    <WrapPanel>
        <controls:KbButton
            Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
            ToolTip="翻译主菜单"
            Command="{x:Static vm:AppStatic.ShowLangViewItems}"
            CommandParameter="MainMenu"
            Padding="8 0"
            Background="Transparent">
            <WrapPanel>
                <Path
                    Width="14"
                    Height="14"
                    Data="{StaticResource Icon_Translate}"
                    Fill="Red"
                    Stretch="Fill" />
            </WrapPanel>
        </controls:KbButton>
        <Menu Background="Transparent" VerticalAlignment="Center">
            <MenuItem Width="26" Height="30" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                <MenuItem.Icon>
                    <Path
					    Width="14"
					    Height="14"
					    Data="{StaticResource Icon_Developer}"
					    Fill="#385263"
					    Stretch="Fill" />
                </MenuItem.Icon>
                <MenuItem Header="ShareDir" Command="{x:Static vm:AppStatic.ShowShareDir}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Dir}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="LangDb" Command="{x:Static vm:AppStatic.OpenLangLiteDb}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Db}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="ServerDb" Command="{x:Static vm:AppStatic.OpenServerLiteDb}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Db}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="导出ServerJson" Command="{x:Static vm:AppStatic.ExportServerJson}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Json}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="本地数据库" Command="{x:Static vm:AppStatic.OpenLocalLiteDb}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Db}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="通知样例" Command="{x:Static vm:AppStatic.ShowNotificationSample}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Info}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="字典" Command="{x:Static vm:AppStatic.ShowSysDic}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_SysDic}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="事件" Command="{x:Static vm:AppStatic.ViewEvent}">
                    <MenuItem.Icon>
                        <Path
						    Width="14"
						    Height="14"
						    Data="{StaticResource Icon_Event}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Width="26" Height="30" Visibility="{x:Static vm:AppStatic.IsMinerClientVisible}">
                <MenuItem.Icon>
                    <Path
					    Width="14"
					    Height="8"
					    Data="{StaticResource Icon_Menu}"
					    Fill="#385263"
					    Stretch="Fill" />
                </MenuItem.Icon>
                <MenuItem Header="{DynamicResource MihOption}" Command="{x:Static vm:AppStatic.ShowMinerProfile}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_MinerProfile}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="{DynamicResource MihCoin}" 
                    Command="{x:Static vm:AppStatic.ShowCoins}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Coin}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="{DynamicResource MihCoinGroup}" 
                    Command="{x:Static vm:AppStatic.ShowGroups}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Group}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="{DynamicResource MihKernel}" 
                    Command="{x:Static vm:AppStatic.ShowKernels}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Kernel}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource MihSpeedChart}" Command="{x:Static vm:AppStatic.ShowSpeedChart}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Speed}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="在线更新" Command="{x:Static vm:AppStatic.ShowOnlineUpdate}">
                    <MenuItem.Icon>
                        <Path
                            Width="14"
                            Height="16"
                            Data="{StaticResource Icon_Update}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="帮助" Command="{x:Static vm:AppStatic.ShowHelp}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Help}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="关于" Command="{x:Static vm:AppStatic.ShowAbout}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_About}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="退出" Command="{x:Static vm:AppStatic.AppExit}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Exit}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Width="26" Height="30" Visibility="{x:Static vm:AppStatic.IsMinerClientNotVisible}">
                <MenuItem.Icon>
                    <Path
					    Width="14"
					    Height="8"
					    Data="{StaticResource Icon_Menu}"
					    Fill="{StaticResource IconFillColor}"
					    Stretch="Fill" />
                </MenuItem.Icon>
                <MenuItem 
                    Header="矿工" 
                    Command="{x:Static vm:AppStatic.ShowMinerClients}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Miner}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="组队" 
                    Command="{x:Static vm:AppStatic.ManageMinerGroup}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_MinerGroup}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="作业" 
                    Command="{x:Static vm:AppStatic.ManageMineWork}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_MineWork}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="币种" 
                    Command="{x:Static vm:AppStatic.ShowCoins}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Coin}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem 
                    Header="内核" 
                    Command="{x:Static vm:AppStatic.ShowKernels}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Kernel}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="计算器设置" Command="{x:Static vm:AppStatic.ShowCalcConfig}">
                    <MenuItem.Icon>
                        <Path
						    Width="16"
						    Height="16"
						    Data="{StaticResource Icon_Calc}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="在线更新" Command="{x:Static vm:AppStatic.ShowOnlineUpdate}">
                    <MenuItem.Icon>
                        <Path
                            Width="14"
                            Height="16"
                            Data="{StaticResource Icon_Update}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="帮助" Command="{x:Static vm:AppStatic.ShowHelp}">
                    <MenuItem.Icon>
                        <Path
						    Width="16"
						    Height="16"
						    Data="{StaticResource Icon_Help}"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="关于" Command="{x:Static vm:AppStatic.ShowAbout}" CommandParameter="ControlCenter">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_About}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="退出" Command="{x:Static vm:AppStatic.AppExit}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            Data="{StaticResource Icon_Exit}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
    </WrapPanel>
</UserControl>
