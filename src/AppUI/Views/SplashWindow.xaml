<Window x:Class="NTMiner.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
		MouseDown="MetroWindow_MouseDown"
        Title="ntminer.com" Height="260" Width="520">
    <Grid Background="{StaticResource IconFillColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="60" Foreground="White">
            NTMiner.com
        </TextBlock>
        <WrapPanel Grid.Row="1" Background="{StaticResource MainColor}">            
        </WrapPanel>
    </Grid>
</Window>
