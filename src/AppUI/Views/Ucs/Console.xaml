<UserControl x:Class="NTMiner.Views.Ucs.Console"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		DataContext="{x:Static vm:MinerProfileViewModel.Current}"
		mc:Ignorable="d" d:DesignHeight="408" d:DesignWidth="408">
    <UserControl.Resources>
        <sys:String x:Key="AnnouncementContent">
            AnnouncementContent
        </sys:String>
    </UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition x:Name="DebugRow"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid>
			<TextBox 
				Background="Black" Text="{DynamicResource AnnouncementContent}"
				BorderThickness="0" AcceptsReturn="True" 
				TextWrapping="Wrap" IsReadOnly="True" 
				Padding="4" Foreground="White">
			</TextBox>
			<WrapPanel 
				Background="Black"
				Margin="0 0 18 0"
				HorizontalAlignment="Right" 
				VerticalAlignment="Top">
                <controls:KbButton
                    Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
                    ToolTip="Console translate"
                    Command="{x:Static vm:AppStatic.ShowLangViewItems}"
                    CommandParameter="Console"
                    Padding="8 0"
                    Background="Transparent">
                    <WrapPanel>
                        <Path
                            Width="14"
                            Height="14"
                            Data="{StaticResource Icon_Translate}"
                            Fill="Red"
                            Stretch="Fill" />
                    </WrapPanel>
                </controls:KbButton>
                <controls:KbCheckBox 
					x:Name="ChkbIsConsoleAutoScrollToEnd"
					ToolTip="滚屏"
					IconColor="{StaticResource IconFillColor}"
					IsChecked="True" />
				<controls:KbButton 
					Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
					ToolTip="自定义主题"
					Background="Transparent" 
					BorderThickness="0"
					Command="{Binding CustomTheme}">
					<Path
						Width="12"
						Height="12"
						Data="{StaticResource Icon_Theme}"
						Fill="{StaticResource IconFillColor}"
						Stretch="Fill" />
				</controls:KbButton>
			</WrapPanel>
		</Grid>
        <Grid Grid.Row="1">
            <RichTextBox Background="#1E1E1E"
				VerticalScrollBarVisibility="Auto"
				x:Name="RichTextBoxDebug" BorderThickness="0" 
				IsReadOnly="True" FontSize="12" FontFamily="宋体"
				Padding="0 0 0 4" Foreground="White">
                <FlowDocument>
                    <Paragraph x:Name="ConsoleParagraphDebug" LineHeight="14">
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>
		<Grid Grid.Row="2" >
			<RichTextBox 
				VerticalScrollBarVisibility="Auto"
				x:Name="RichTextBox" BorderThickness="0" 
				IsReadOnly="True" FontSize="12" FontFamily="宋体"
				Padding="0 0 0 4" Background="Black" Foreground="White">
				<FlowDocument>
					<Paragraph x:Name="ConsoleParagraph" LineHeight="14">
					</Paragraph>
				</FlowDocument>
			</RichTextBox>
		</Grid>
	</Grid>
</UserControl>
