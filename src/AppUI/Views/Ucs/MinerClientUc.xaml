<UserControl x:Class="NTMiner.Views.Ucs.MinerClientUc"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		d:DataContext="{d:DesignData Source=Design/MinerClientViewModel.xaml}"
		mc:Ignorable="d">
	<UserControl.Resources>
		<Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
			<Setter Property="Width" Value="130"></Setter>
			<Setter Property="Padding" Value="0 0 20 0"></Setter>
			<Setter Property="VerticalAlignment" Value="Top"></Setter>
		</Style>
		<Style x:Key="Row" TargetType="WrapPanel">
			<Setter Property="Margin" Value="0 4"></Setter>
		</Style>
		<Style x:Key="RowLine" TargetType="Border">
			<Setter Property="BorderBrush" Value="#EEEEEE"></Setter>
			<Setter Property="BorderThickness" Value="0 1 0 0"></Setter>
		</Style>
		<sys:Double x:Key="OneColWidth">480</sys:Double>
		<sys:Double x:Key="DoubleColWidth">980</sys:Double>
		<sys:Double x:Key="DoubleColValueWidth">850</sys:Double>
	</UserControl.Resources>
	<StackPanel HorizontalAlignment="Left">
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}">最后更新</TextBlock>
			<TextBlock Width="120" Text="{Binding LastActivedOnText}"></TextBlock>
			<WrapPanel>
				<Button 
					Command="{Binding StartMine}" 
					Visibility="{Binding IsMining, Converter={StaticResource BoolToVisibilityInvertConverter}}">
					<Button.Template>
						<ControlTemplate>
							<Border
								x:Name="Content"
								Padding="4 2"
								Height="20"
								Background="Red"
								BorderThickness="0">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_Mining1}"
										Fill="White"
										Stretch="Fill">
									</Path>
									<Label
										x:Name="Text"
										Padding="2 0 0 0"
										VerticalAlignment="Center"
										Foreground="White"
										Content="未在挖矿" />
								</WrapPanel>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="Content" Property="Background" Value="Green"></Setter>
									<Setter TargetName="Content" Property="BorderBrush" Value="Green"></Setter>
									<Setter TargetName="Text" Property="Content" Value="开始挖矿"></Setter>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Button.Template>
				</Button>
				<Button
					Command="{Binding StopMine}" 
					Visibility="{Binding IsMining, Converter={StaticResource BoolToVisibilityConverter}}">
					<Button.Template>
						<ControlTemplate>
							<Border 
								x:Name="Content"
								Padding="4 2"
								Height="20"
								Background="Green"
								BorderThickness="0">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Visibility="{Binding IsShovelEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
										Data="{StaticResource Icon_Mining2}"
										Fill="White"
										Stretch="Fill">
										<Path.RenderTransform>
											<RotateTransform Angle="-20" CenterX="7" CenterY="7"></RotateTransform>
										</Path.RenderTransform>
									</Path>
									<Path
										Width="14"
										Height="14"
										Visibility="{Binding IsShovelEmpty, Converter={StaticResource BoolToVisibilityInvertConverter}}"
										Data="{StaticResource Icon_Mining1}"
										Fill="White"
										Stretch="Fill">
										<Path.RenderTransform>
											<RotateTransform Angle="20" CenterX="7" CenterY="7"></RotateTransform>
										</Path.RenderTransform>
									</Path>
									<Label
										x:Name="Text"
										Padding="2 0 0 0"
										VerticalAlignment="Center"
										Foreground="White"
										Content="正在挖矿" />
								</WrapPanel>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="Content" Property="Background" Value="Red"></Setter>
									<Setter TargetName="Content" Property="BorderBrush" Value="Red"></Setter>
									<Setter TargetName="Text" Property="Content" Value="停止挖矿"></Setter>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Button.Template>
				</Button>
				<Menu 
					Background="Transparent"
					BorderThickness="0"
					Width="24"
					Height="20"
					Padding="0">
					<MenuItem>
						<MenuItem.Icon>
							<Path
								Width="14"
								Height="8"
								Data="{StaticResource Icon_Menu}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
						</MenuItem.Icon>
						<MenuItem Header="重启客户端" Command="{Binding RestartNTMiner}">
							<MenuItem.Icon>
								<Path
									Width="16"
									Height="16"
									Data="{StaticResource Icon_Restart}"
									Fill="{StaticResource IconFillColor}"
									Stretch="Fill" />
							</MenuItem.Icon>
						</MenuItem>
						<MenuItem Header="重启电脑" Command="{Binding RestartWindows}">
							<MenuItem.Icon>
								<Path
									Width="16"
									Height="16"
									Data="{StaticResource Icon_Restart2}"
									Fill="{StaticResource IconFillColor}"
									Stretch="Fill" />
							</MenuItem.Icon>
						</MenuItem>
						<MenuItem Header="关闭电脑" Command="{Binding ShutdownWindows}">
							<MenuItem.Icon>
								<Path
									Width="16"
									Height="16"
									Data="{StaticResource Icon_Shutdown}"
									Fill="{StaticResource IconFillColor}"
									Stretch="Fill" />
							</MenuItem.Icon>
						</MenuItem>
						<MenuItem Header="删除矿工" Command="{Binding Remove}">
							<MenuItem.Icon>
								<Path
									Width="16"
									Height="16"
									Data="{StaticResource Icon_Delete}"
									Fill="{StaticResource IconFillColor}"
									Stretch="Fill" />
							</MenuItem.Icon>
						</MenuItem>
					</MenuItem>
				</Menu>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">运行时长</TextBlock>
				<TextBlock Text="{Binding BootTimeSpanText}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">挖矿时长</TextBlock>
				<TextBlock Text="{Binding MineTimeSpanText}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">作业</TextBlock>
				<ComboBox
					MinWidth="100"
					ItemsSource="{Binding MineWorkVms.MineWorkItems}"
					DisplayMemberPath="Name"
					SelectedItem="{Binding SelectedMineWork}"
					Text="{Binding SelectedMineWork.Name, Mode=OneWay}"></ComboBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">分组</TextBlock>
				<ComboBox 
					MinWidth="100"
					ItemsSource="{Binding MinerGroupVms}"
					DisplayMemberPath="Name"
					SelectedItem="{Binding SelectedMinerGroup}"></ComboBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">远程桌面</TextBlock>
				<controls:KbButton
					BorderThickness="0"
					Background="Transparent"
					Command="{Binding RemoteDesktop}"
					CornerRadius="2">
					<Path
						Width="14"
						Height="14"
						Data="{StaticResource Icon_RemoteDesktop}"
						Fill="{StaticResource IconFillColor}"
						Stretch="Fill" />
				</controls:KbButton>
				<TextBox 
					Width="122"
					Padding="0"
					ToolTip="双击打开远程桌面"
					PreviewMouseDoubleClick="TbIp_PreviewMouseDoubleClick"
					Tag="{Binding}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MinerIp, Mode=OneWay}"></TextBox>
				<TextBox Width="100" Text="{Binding WindowsLoginName,UpdateSourceTrigger=LostFocus}" ToolTip="Windows远程桌面登录名"></TextBox>
				<PasswordBox Margin="10 0 0 0" Width="100" ToolTip="Windows远程桌面密码" VerticalContentAlignment="Center" Background="White" controls:PasswordBoxHelper.Attach="true" controls:PasswordBoxHelper.Password="{Binding WindowsPassword, Mode=TwoWay, ValidatesOnExceptions=True, UpdateSourceTrigger=LostFocus}"/>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">矿工名</TextBlock>
				<TextBox 
					ToolTip="注意：修改矿工名后需重新开始挖矿才能反应到矿池"
					Width="120"
					Text="{Binding MinerName}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主挖币种</TextBlock>
				<TextBlock Text="{Binding MainCoinCode}"></TextBlock>
				<TextBox 
					Margin="10 0 0 0"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					Text="{Binding MainCoinWallet, Mode=OneWay}" 
					IsReadOnly="True"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
				<TextBlock Style="{StaticResource LblTb}">双挖币种</TextBlock>
				<TextBlock Text="{Binding DualCoinCode}"></TextBlock>
				<TextBox 
					Margin="10 0 0 0"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding DualCoinWallet, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币算力</TextBlock>
				<TextBlock Text="{Binding MainCoinSpeedText}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币拒绝</TextBlock>
				<TextBlock Text="{Binding MainCoinRejectShare}"></TextBlock>
				<TextBlock Padding="1 0" Text="/"></TextBlock>
				<TextBlock Text="{Binding MainCoinTotalShare}"></TextBlock>
				<TextBlock Margin="10 0 0 0" Text="{Binding MainCoinRejectPercentText}" Foreground="{Binding MainCoinRejectPercentForeground}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">双挖算力</TextBlock>
				<TextBox 
				Padding="0"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				Text="{Binding DualCoinSpeedText, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">双挖币拒绝</TextBlock>
				<TextBlock Text="{Binding DualCoinRejectShare}"></TextBlock>
				<TextBlock Padding="1 0" Text="/"></TextBlock>
				<TextBlock Text="{Binding DualCoinTotalShare}"></TextBlock>
				<TextBlock Margin="10 0 0 0" Text="{Binding DualCoinRejectPercentText}" Foreground="{Binding DualCoinRejectPercentForeground}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币预期收益</TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinPerDayText}"></TextBlock>
				<TextBlock 
					Text="{Binding MainCoinCode}" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Text=", "></TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinUsdPerDayText}"></TextBlock>
				<TextBlock 
					Text="$" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Text=", "></TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinCnyPerDayText}"></TextBlock>
				<TextBlock 
					Text="￥" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
				<TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">总功耗</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding TotalPowerText, Mode=OneWay}"></TextBox>
				<TextBlock Style="{StaticResource LblTb}">最高卡温</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					Foreground="{Binding TempForeground}"
					IsReadOnly="True"
					Text="{Binding MaxTempText, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
			<TextBlock Style="{StaticResource LblTb}">双挖币预期收益</TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinPerDayText}"></TextBlock>
			<TextBlock 
				Text="{Binding DualCoinCode}" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Text=", "></TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinUsdPerDayText}"></TextBlock>
			<TextBlock 
				Text="$" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Text=", "></TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinCnyPerDayText}"></TextBlock>
			<TextBlock 
				Text="￥" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
			<TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
		</WrapPanel>
		<Border Style="{StaticResource RowLine}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}">显卡表格</TextBlock>
			<Grid Margin="0 -4 0 0">
				<DataGrid 
					MinRowHeight="24"
					ColumnHeaderHeight="24"
					IsReadOnly="True"
					Background="Transparent"
					ItemsSource="{Binding GpuTableTrs}">
					<DataGrid.Resources>
						<vm:BindingProxy x:Key="proxy2" Data="{Binding}" />
						<Style TargetType="DataGridColumnHeader">
							<Style.Resources>
								<ResourceDictionary />
							</Style.Resources>
							<Setter Property="UseLayoutRounding" Value="True" />
							<Setter Property="Foreground" Value="#FF5A5A5A" />
							<Setter Property="Background" Value="Transparent"></Setter>
							<Setter Property="FontSize" Value="14" />
							<Setter Property="Focusable" Value="False"></Setter>
							<Setter Property="Control.VerticalContentAlignment">
								<Setter.Value>
									<x:Static Member="VerticalAlignment.Center" />
								</Setter.Value>
							</Setter>
						</Style>

						<Style TargetType="DataGridRow">
							<Setter Property="Foreground" Value="#FF666666" />
							<Setter Property="Background" Value="Transparent"></Setter>
						</Style>

						<Style TargetType="DataGridCell">
							<Setter Property="Foreground" Value="#FF5A5A5A" />
							<Setter Property="Background" Value="Transparent"></Setter>
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="DataGridCell">
										<ContentPresenter
											HorizontalAlignment="Left"
											VerticalAlignment="Center" />
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</DataGrid.Resources>
					<DataGrid.Columns>
						<DataGridTextColumn 
							Binding="{Binding RowHeader}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTemplateColumn 
							Header="GPU0"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=0}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu0}" Foreground="{Binding Gpu0Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU1" 
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=1}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu1}" Foreground="{Binding Gpu1Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU2" 
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=2}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu2}" Foreground="{Binding Gpu2Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU3" 
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=3}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu3}" Foreground="{Binding Gpu3Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU4" 
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=4}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu4}" Foreground="{Binding Gpu4Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU5"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=5}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu5}" Foreground="{Binding Gpu5Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU6"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=6}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu6}" Foreground="{Binding Gpu6Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU7"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=7}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu7}" Foreground="{Binding Gpu7Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU8" 
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=8}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu8}" Foreground="{Binding Gpu8Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU9"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=9}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu9}" Foreground="{Binding Gpu9Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU10"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=10}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu10}" Foreground="{Binding Gpu10Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn 
							Header="GPU11"
							Visibility="{Binding Data.GpuCount,Source={StaticResource proxy2},Converter={StaticResource GreatToVisibleConverter}, ConverterParameter=11}"
							CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gpu11}" Foreground="{Binding Gpu11Foreground}"></TextBlock>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>
				<StackPanel Background="#00ffffff"></StackPanel>
			</Grid>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币矿池</TextBlock>
				<TextBox 
					Padding="0"
					ToolTip="{Binding MainCoinPool}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MainCoinPool, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
				<TextBlock Style="{StaticResource LblTb}">双挖矿池</TextBlock>
				<TextBox 
					Padding="0"
					ToolTip="{Binding DualCoinPool}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding DualCoinPool, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">客户端版本</TextBlock>
				<TextBox Padding="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding Version, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">挖矿内核</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding Kernel, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">操作系统</TextBlock>
				<TextBox IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding OSName, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">虚拟内存</TextBlock>
				<TextBox Padding="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding OSVirtualMemoryGbText, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">开机自动启动</TextBlock>
				<TextBlock 
				Visibility="{Binding IsAutoBoot,Converter={StaticResource BoolToVisibilityConverter}}"
				Text="是"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">启动后自动开始挖矿</TextBlock>
				<TextBlock 
				Visibility="{Binding IsAutoStart,Converter={StaticResource BoolToVisibilityConverter}}"
				Text="是"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">显卡类型</TextBlock>
				<Path
					Width="18"
					Height="14"
					ToolTip="NVIDIA"
					Visibility="{Binding IsNvidiaIconVisible}"
					Data="{StaticResource Icon_Nvidia}"
					Fill="Green"
					Stretch="Fill" />
				<Path
					Width="16"
					Height="14"
					ToolTip="AMD"
					Visibility="{Binding IsAMDIconVisible}"
					Data="{StaticResource Icon_AMD}"
					Fill="Red"
					Stretch="Fill" />
				<TextBlock Text=" x "></TextBlock>
				<TextBlock Text="{Binding GpuCount}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">显卡驱动</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding GpuDriver, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}">显卡</TextBlock>
			<TextBox 
				Padding="0"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				ToolTip="{Binding GpuInfo}"
				Text="{Binding GpuInfo, Mode=OneWay}"></TextBox>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}">内核命令行</TextBlock>
			<TextBox 
				Width="{StaticResource DoubleColValueWidth}"
				Padding="0"
				BorderThickness="0"
				TextWrapping="Wrap"
				Background="Transparent"
				IsReadOnly="True"
				ToolTip="{Binding KernelCommandLine}"
				Text="{Binding KernelCommandLine, Mode=OneWay}"></TextBox>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
	</StackPanel>
</UserControl>
