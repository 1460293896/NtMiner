<UserControl x:Class="NTMiner.Views.Ucs.MinerClientUc"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		d:DataContext="{d:DesignData Source=Design/MinerClientViewModel.xaml}"
		mc:Ignorable="d">
	<UserControl.Resources>
		<Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
			<Setter Property="Width" Value="130"></Setter>
			<Setter Property="Padding" Value="0 0 20 0"></Setter>
		</Style>
		<Style x:Key="Row" TargetType="WrapPanel">
			<Setter Property="Margin" Value="0 4"></Setter>
		</Style>
		<Style x:Key="RowLine" TargetType="Border">
			<Setter Property="BorderBrush" Value="#EEEEEE"></Setter>
			<Setter Property="BorderThickness" Value="0 1 0 0"></Setter>
		</Style>
		<sys:Double x:Key="OneColWidth">480</sys:Double>
		<sys:Double x:Key="DoubleColWidth">980</sys:Double>
	</UserControl.Resources>
	<StackPanel HorizontalAlignment="Left">
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">最后更新</TextBlock>
				<TextBlock Text="{Binding LastActivedOnText}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">矿工名</TextBlock>
				<TextBlock Text="{Binding MinerName}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">运行时长</TextBlock>
				<TextBlock Text="{Binding BootTimeSpanText}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">挖矿时长</TextBlock>
				<TextBlock Text="{Binding MineTimeSpanText}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">作业</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding SelectedMineWork.Name, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">分组</TextBlock>
				<TextBlock Text="{Binding SelectedMinerGroup.Name}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<TextBlock Style="{StaticResource LblTb}">远程桌面</TextBlock>
			<controls:KbButton
				BorderThickness="0"
				Background="Transparent"
				Command="{Binding RemoteDesktop}"
				CornerRadius="2">
				<Path
					Width="14"
					Height="14"
					Data="{StaticResource Icon_RemoteDesktop}"
					Fill="{StaticResource IconFillColor}"
					Stretch="Fill" />
			</controls:KbButton>
			<TextBox 
				Padding="0"
				ToolTip="双击打开远程桌面"
				PreviewMouseDoubleClick="TbIp_PreviewMouseDoubleClick"
				Tag="{Binding}"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				Text="{Binding MinerIp, Mode=OneWay}"></TextBox>
			<controls:KbButton
				Margin="20 0 0 0"
				BorderThickness="0"									
				Background="Transparent"
				Command="{Binding RemoteLogin}"
				CornerRadius="2">
				<Path
					Width="14"
					Height="14"
					Data="{StaticResource Icon_Edit}"
					Fill="{StaticResource IconFillColor}"
					Stretch="Fill" />
			</controls:KbButton>
			<TextBlock Margin="4 0 0 0" Text="{Binding WindowsLoginName}"></TextBlock>
			<TextBlock Margin="10 0 0 0" Text="{Binding WindowsPasswordStar}"></TextBlock>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主挖币种</TextBlock>
				<TextBlock Text="{Binding MainCoinCode}"></TextBlock>
				<TextBox 
					Margin="10 0 0 0"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					Text="{Binding MainCoinWallet, Mode=OneWay}" 
					IsReadOnly="True"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
				<TextBlock Style="{StaticResource LblTb}">双挖币种</TextBlock>
				<TextBlock Text="{Binding DualCoinCode}"></TextBlock>
				<TextBox 
					Margin="10 0 0 0"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding DualCoinWallet, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币算力</TextBlock>
				<TextBlock Text="{Binding MainCoinSpeedText}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币拒绝</TextBlock>
				<TextBlock Text="{Binding MainCoinRejectShare}"></TextBlock>
				<TextBlock Padding="1 0" Text="/"></TextBlock>
				<TextBlock Text="{Binding MainCoinTotalShare}"></TextBlock>
				<TextBlock Margin="10 0 0 0" Text="{Binding MainCoinRejectPercentText}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">双挖算力</TextBlock>
				<TextBox 
				Padding="0"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				Text="{Binding DualCoinSpeedText, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">双挖币拒绝</TextBlock>
				<TextBlock Text="{Binding DualCoinRejectShare}"></TextBlock>
				<TextBlock Padding="1 0" Text="/"></TextBlock>
				<TextBlock Text="{Binding DualCoinTotalShare}"></TextBlock>
				<TextBlock Margin="10 0 0 0" Text="{Binding DualCoinRejectPercentText}"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币预期收益</TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinPerDayText}"></TextBlock>
				<TextBlock 
					Text="{Binding MainCoinCode}" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Text=", "></TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinUsdPerDayText}"></TextBlock>
				<TextBlock 
					Text="USD" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Text=", "></TextBlock>
				<TextBlock Text="{Binding IncomeMainCoinCnyPerDayText}"></TextBlock>
				<TextBlock 
					Text="CNY" 
					Margin="2 0 0 0"
					Padding="0"
					Foreground="{StaticResource LableColor}"></TextBlock>
				<TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
				<TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">总功耗</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding TotalPowerText, Mode=OneWay}"></TextBox>
				<TextBlock Style="{StaticResource LblTb}">最高卡温</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MaxTempText, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
			<TextBlock Style="{StaticResource LblTb}">双挖币预期收益</TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinPerDayText}"></TextBlock>
			<TextBlock 
				Text="{Binding DualCoinCode}" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Text=", "></TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinUsdPerDayText}"></TextBlock>
			<TextBlock 
				Text="USD" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Text=", "></TextBlock>
			<TextBlock Text="{Binding IncomeDualCoinCnyPerDayText}"></TextBlock>
			<TextBlock 
				Text="CNY" 
				Margin="2 0 0 0"
				Padding="0"
				Foreground="{StaticResource LableColor}"></TextBlock>
			<TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
			<TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
		</WrapPanel>
		<Border Style="{StaticResource RowLine}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}" VerticalAlignment="Top">显卡表格</TextBlock>
			<Grid Margin="0 -4 0 0">
				<DataGrid 
					MinRowHeight="24"
					ColumnHeaderHeight="24"
					IsReadOnly="True"
					Background="Transparent"
					ItemsSource="{Binding GpuTableTrs}">
					<DataGrid.Resources>
						<Style TargetType="DataGridColumnHeader">
							<Style.Resources>
								<ResourceDictionary />
							</Style.Resources>
							<Setter Property="UseLayoutRounding" Value="True" />
							<Setter Property="Foreground" Value="#FF5A5A5A" />
							<Setter Property="Background" Value="Transparent"></Setter>
							<Setter Property="FontSize" Value="14" />
							<Setter Property="Focusable" Value="False"></Setter>
							<Setter Property="Control.VerticalContentAlignment">
								<Setter.Value>
									<x:Static Member="VerticalAlignment.Center" />
								</Setter.Value>
							</Setter>
						</Style>

						<Style TargetType="DataGridRow">
							<Setter Property="Foreground" Value="#FF666666" />
							<Setter Property="Background" Value="Transparent"></Setter>
						</Style>

						<Style TargetType="DataGridCell">
							<Setter Property="Foreground" Value="#FF5A5A5A" />
							<Setter Property="Background" Value="Transparent"></Setter>
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="DataGridCell">
										<ContentPresenter
											HorizontalAlignment="Left"
											VerticalAlignment="Center" />
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</DataGrid.Resources>
					<DataGrid.Columns>
						<DataGridTextColumn Header="数据项" Binding="{Binding RowHeader}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU0" Binding="{Binding Gpu0}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU1" Binding="{Binding Gpu1}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU2" Binding="{Binding Gpu2}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU3" Binding="{Binding Gpu3}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU4" Binding="{Binding Gpu4}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU5" Binding="{Binding Gpu5}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU6" Binding="{Binding Gpu6}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU7" Binding="{Binding Gpu7}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU8" Binding="{Binding Gpu8}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU9" Binding="{Binding Gpu9}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU10" Binding="{Binding Gpu10}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
						<DataGridTextColumn MinWidth="50" Header="GPU11" Binding="{Binding Gpu11}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True"></DataGridTextColumn>
					</DataGrid.Columns>
				</DataGrid>
				<StackPanel Background="#00ffffff"></StackPanel>
			</Grid>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">主币矿池</TextBlock>
				<TextBox 
					Padding="0"
					ToolTip="{Binding MainCoinPool}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MainCoinPool, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}" Visibility="{Binding IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
				<TextBlock Style="{StaticResource LblTb}">双挖矿池</TextBlock>
				<TextBox 
					Padding="0"
					ToolTip="{Binding DualCoinPool}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding DualCoinPool, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">客户端版本</TextBlock>
				<TextBox Padding="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding Version, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Style="{StaticResource Row}" Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">挖矿内核</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding Kernel, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">操作系统</TextBlock>
				<TextBox IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding OSName, Mode=OneWay}"></TextBox>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">虚拟内存</TextBlock>
				<TextBox Padding="0" IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding OSVirtualMemoryGbText, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">开机自动启动</TextBlock>
				<TextBlock 
				Visibility="{Binding IsAutoBoot,Converter={StaticResource BoolToVisibilityConverter}}"
				Text="是"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">启动后自动开始挖矿</TextBlock>
				<TextBlock 
				Visibility="{Binding IsAutoStart,Converter={StaticResource BoolToVisibilityConverter}}"
				Text="是"></TextBlock>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}">
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">显卡类型</TextBlock>
				<Path
					Width="18"
					Height="14"
					ToolTip="NVIDIA"
					Visibility="{Binding IsNvidiaIconVisible}"
					Data="{StaticResource Icon_Nvidia}"
					Fill="Green"
					Stretch="Fill" />
				<Path
					Width="16"
					Height="14"
					ToolTip="AMD"
					Visibility="{Binding IsAMDIconVisible}"
					Data="{StaticResource Icon_AMD}"
					Fill="Red"
					Stretch="Fill" />
				<TextBlock Text=" x "></TextBlock>
				<TextBlock Text="{Binding GpuCount}"></TextBlock>
			</WrapPanel>
			<WrapPanel Width="{StaticResource OneColWidth}">
				<TextBlock Style="{StaticResource LblTb}">显卡驱动</TextBlock>
				<TextBox 
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding GpuDriver, Mode=OneWay}"></TextBox>
			</WrapPanel>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
		<WrapPanel Style="{StaticResource Row}" Width="{StaticResource DoubleColWidth}">
			<TextBlock Style="{StaticResource LblTb}">显卡</TextBlock>
			<TextBox 
				Padding="0"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				ToolTip="{Binding GpuInfo}"
				Text="{Binding GpuInfo, Mode=OneWay}"></TextBox>
		</WrapPanel>
		<Border Style="{StaticResource RowLine}"></Border>
	</StackPanel>
</UserControl>
