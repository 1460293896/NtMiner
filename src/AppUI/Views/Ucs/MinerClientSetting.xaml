<UserControl x:Class="NTMiner.Views.Ucs.MinerClientSetting"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		mc:Ignorable="d"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs" Background="White">
	<UserControl.Resources>
		<sys:String x:Key="WindowTitle">
			远程设置矿机
		</sys:String>
	</UserControl.Resources>
	<Grid Margin="30 10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Margin="0 10">
			<controls:KbCheckBox
				Margin="0 2 0 0"
				Content="开机自动启动"
				IconColor="{StaticResource IconFillColor}"
				IsChecked="{Binding IsAutoBoot}" />
			<controls:KbCheckBox
				Margin="0 2 0 0"
				Content="启动后自动开始挖矿"
				IconColor="{StaticResource IconFillColor}"
				IsChecked="{Binding IsAutoStart}" />
		</StackPanel>
		<controls:KbButton
			Grid.Row="1"
			HorizontalAlignment="Center"
			IsDefault="True"
			Command="{Binding Save}" 
			Padding="10 0"
			Background="{StaticResource ThemeBackground}"
			Foreground="{StaticResource ThemeForeground}"
			CornerRadius="2">
			<WrapPanel>
				<Path
					Width="12"
					Height="12"
					Data="{StaticResource Icon_Add}"
					Fill="{StaticResource ThemeForeground}"
					Stretch="Fill" />
				<TextBlock
					Padding="4"
					VerticalAlignment="Center"
					Foreground="{StaticResource ThemeForeground}"
					Text="确定" />
			</WrapPanel>
		</controls:KbButton>
	</Grid>
</UserControl>
