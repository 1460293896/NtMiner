<UserControl x:Class="NTMiner.Views.Ucs.KernelEdit"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		mc:Ignorable="d"
		d:DataContext="{d:DesignData Source=Design/KernelViewModel.xaml}"
        Background="White"
		d:DesignWidth="660" d:DesignHeight="480">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AppUI;component/Styles/KbCoinCode.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Label">
                <Setter Property="Width" Value="110"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Right"></Setter>
            </Style>
            <sys:String x:Key="WindowTitle">
                WindowTitle
            </sys:String>
            <sys:String x:Key="Kernel">
                Kernel
            </sys:String>
            <sys:String x:Key="SpeedPick">
                SpeedPick
            </sys:String>
            <sys:String x:Key="Code">
                Code
            </sys:String>
            <sys:String x:Key="Version">
                Version
            </sys:String>
            <sys:String x:Key="Package">
                Package
            </sys:String>
            <sys:String x:Key="Sort">
                Sort
            </sys:String>
            <sys:String x:Key="Browser">
                Browser
            </sys:String>
            <sys:String x:Key="PackageHistory">
                PackageHistory
            </sys:String>
            <sys:String x:Key="PackageHistoryTip">
                PackageHistoryTip
            </sys:String>
            <sys:String x:Key="Notice">
                Notice
            </sys:String>
            <sys:String x:Key="Help">
                Help
            </sys:String>
            <sys:String x:Key="Args">
                Args
            </sys:String>
            <sys:String x:Key="IsSupportDualMine">
                IsSupportDualMine
            </sys:String>
            <sys:String x:Key="DualCoinGroup">
                DualCoinGroup
            </sys:String>
            <sys:String x:Key="DualCoinGroupDescription">
                DualCoinGroupDescription
            </sys:String>
            <sys:String x:Key="DualFullArgs">
                DualFullArgs
            </sys:String>
            <sys:String x:Key="CopyFrom">
                CopyFrom
            </sys:String>
            <sys:String x:Key="MainCoin">
                MainCoin
            </sys:String>
            <sys:String x:Key="TotalSpeedPattern">
                TotalSpeedPattern
            </sys:String>
            <sys:String x:Key="TotalSharePattern">
                TotalSharePattern
            </sys:String>
            <sys:String x:Key="AcceptSharePattern">
                AcceptSharePattern
            </sys:String>
            <sys:String x:Key="RejectSharePattern">
                RejectSharePattern
            </sys:String>
            <sys:String x:Key="RejectPercentPattern">
                RejectPercentPattern
            </sys:String>
            <sys:String x:Key="GpuSpeedPattern">
                GpuSpeedPattern
            </sys:String>
            <sys:String x:Key="DualCoin">
                DualCoin
            </sys:String>
            <sys:String x:Key="DualTotalSpeedPattern">
                DualTotalSpeedPattern
            </sys:String>
            <sys:String x:Key="DualTotalSharePattern">
                DualTotalSharePattern
            </sys:String>
            <sys:String x:Key="DualAcceptSharePattern">
                DualAcceptSharePattern
            </sys:String>
            <sys:String x:Key="DualRejectSharePattern">
                DualRejectSharePattern
            </sys:String>
            <sys:String x:Key="DualRejectPercentPattern">
                DualRejectPercentPattern
            </sys:String>
            <sys:String x:Key="DualGpuSpeedPattern">
                DualGpuSpeedPattern
            </sys:String>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl 
		    Padding="0" BorderThickness="0" 
		    BorderBrush="{StaticResource LineColor}">
            <controls:KbTabItem>
                <controls:KbTabItem.Header>
                    <TextBlock Text="{DynamicResource Kernel}" Padding="8 0"></TextBlock>
                </controls:KbTabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="540"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource Code}"></Label>
                            <TextBox 
						        Width="160"
						        IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
						        VerticalContentAlignment="Center" Text="{Binding Code, ValidatesOnExceptions=True}">
                            </TextBox>
                            <Label Content="{DynamicResource Version}"></Label>
                            <TextBox 
						        Width="160"
						        IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
						        VerticalContentAlignment="Center" Text="{Binding Version, ValidatesOnExceptions=True}">
                            </TextBox>
                        </WrapPanel>

                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource Package}"></Label>
                            <Grid Width="430">
                                <WrapPanel VerticalAlignment="Center">
                                    <TextBox IsReadOnly="True" BorderThickness="0" VerticalAlignment="Center" Text="{Binding Package, Mode=OneWay}">
                                    </TextBox>
                                    <Button 
						                Margin="4 0 0 0"
                                        Padding="4 0"
						                IsEnabled="{x:Static vm:AppStatic.IsDevMode}"
						                VerticalAlignment="Center"
						                Command="{Binding BrowsePackage}"
						                Content="{DynamicResource Browser}">
                                    </Button>
                                    <TextBlock Margin="20 0 0 0" VerticalAlignment="Center" Text="{Binding SizeMbText}">
                                    </TextBlock>
                                </WrapPanel>
                            </Grid>
                        </WrapPanel>

                        <WrapPanel Margin="0 2" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                            <Label Content="{DynamicResource PackageHistory}"></Label>
                            <TextBox 
                                ToolTip="{DynamicResource PackageHistoryTip}"
						        Width="430" Background="Transparent" Padding="0 4"
						        Text="{Binding PackageHistory, Mode=TwoWay}">
                            </TextBox>
                        </WrapPanel>

                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource Notice}"></Label>
                            <TextBox 
						        Width="430" Background="Transparent" Padding="0 4"
						        IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
						        AcceptsReturn="True" TextWrapping="Wrap" 
						        VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
						        Text="{Binding Notice, Mode=TwoWay}" Height="50">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource Help}"></Label>
                            <TextBox 
						        Width="160"
						        IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
						        VerticalContentAlignment="Center" Text="{Binding HelpArg}">
                            </TextBox>
                            <controls:KbLinkButton
                                Margin="4 0 0 0"
							    Visibility="{Binding HelpArg, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
							    HorizontalAlignment="Right"
							    ToolTip="{DynamicResource Help}"
							    KbDisplayLine="False"
							    KbSystemButtonHoverBackground="Transparent" 
							    Background="Transparent"
							    Command="{Binding ShowKernelHelp}">
                                <WrapPanel>
                                    <Path
									    Width="14"
									    Height="14"
									    Data="{StaticResource Icon_Help}"
									    Fill="{StaticResource IconFillColor}"
									    Stretch="Fill" />
                                    <TextBlock Text="{DynamicResource Help}"></TextBlock>
                                </WrapPanel>
                            </controls:KbLinkButton>
                        </WrapPanel>

                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource Args}"></Label>
                            <TextBox 
						        Width="430" Background="Transparent" Padding="0 4"
						        IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
						        AcceptsReturn="True" TextWrapping="Wrap" 
						        VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
						        Text="{Binding Args, Mode=TwoWay}" Height="60">
                            </TextBox>
                        </WrapPanel>

                        <WrapPanel Margin="0 2">
                            <Label></Label>
                            <controls:KbCheckBox 
				                IsEnabled="{x:Static vm:AppStatic.IsDevMode}"
				                Content="{DynamicResource IsSupportDualMine}"
				                IconColor="{StaticResource IconFillColor}"
				                IsChecked="{Binding IsSupportDualMine}" />
                        </WrapPanel>

                        <WrapPanel Margin="0 2" Visibility="{Binding IsSupportDualMine, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Label Content="{DynamicResource DualCoinGroup}" ToolTip="{DynamicResource DualCoinGroup}"></Label>
                            <ComboBox 
                                BorderThickness="0"
				                IsEnabled="{x:Static vm:AppStatic.IsDevMode}"
						        Width="160" ItemsSource="{Binding GroupVms.SelectionOptions}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding DualCoinGroup}">
                            </ComboBox>
                            <TextBlock 
                                Margin="2 0 0 0"
                                Visibility="{Binding IsDualCoinGroupEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                                VerticalAlignment="Center" Foreground="Red" Text="{DynamicResource DualCoinGroupDescription}"></TextBlock>
                        </WrapPanel>

                        <WrapPanel Margin="0 2" Visibility="{Binding IsSupportDualMine, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Label Content="{DynamicResource DualFullArgs}" ToolTip="{DynamicResource DualFullArgs}"></Label>
                            <TextBox 
				                Width="430" Background="Transparent"
				                IsReadOnly="{x:Static vm:AppStatic.IsNotDevMode}"
				                AcceptsReturn="True" TextWrapping="Wrap" 
				                VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
				                Text="{Binding DualFullArgs, Mode=TwoWay}" Height="60">
                            </TextBox>
                        </WrapPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}" HorizontalAlignment="Left">
                        <WrapPanel>
                            <Label Width="40" Content="{DynamicResource Sort}"></Label>
                            <TextBox Width="40" VerticalContentAlignment="Center" Text="{Binding SortNumber, ValidatesOnExceptions=True}">
                            </TextBox>
                        </WrapPanel>
                        <controls:KbLinkButton
                            Margin="10 124 0 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
					        KbDisplayLine="False"
					        KbSystemButtonHoverBackground="Transparent" 
					        Background="Transparent"
					        Command="{Binding SelectCopySourceKernel}"
                            CommandParameter="basic">
                            <WrapPanel>
                                <Path
							        Width="12"
							        Height="12"
							        Data="{StaticResource Icon_Kernel}"
							        Fill="{StaticResource IconFillColor}"
							        Stretch="Fill" />
                                <TextBlock Text="{DynamicResource CopyFrom}"></TextBlock>
                            </WrapPanel>
                        </controls:KbLinkButton>
                        <TextBox 
                            Width="100" Margin="10 6 0 0" BorderThickness="0" IsReadOnly="True" 
                            AcceptsReturn="True" TextWrapping="Wrap">mainCoin、mainAlgo、wallet、pool、worker</TextBox>
                        <TextBox 
                            Margin="10 0 0 0"
                            Visibility="{Binding IsSupportDualMine, Converter={StaticResource BoolToVisibilityConverter}}"
                            Width="100" BorderThickness="0" IsReadOnly="True" AcceptsReturn="True" 
                            TextWrapping="Wrap">dualCoin、dualAlgo、dualWeight、dualWallet、dualPool</TextBox>
                    </StackPanel>

                    <controls:KbButton
                        VerticalAlignment="Bottom"
                        Command="{Binding Save}" 
                        Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
                        Margin="0 10 0 0"
                        Width="70" 
                        Height="30"
                        Background="{StaticResource IconFillColor}"
                        Foreground="White"
                        CornerRadius="2">
                        <WrapPanel>
                            <Path
                                Width="12"
                                Height="12"
                                Data="{StaticResource Icon_Ok}"
                                Fill="White"
                                Stretch="Fill" />
                            <TextBlock
                                Padding="4"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="确定" />
                        </WrapPanel>
                    </controls:KbButton>
                </Grid>
            </controls:KbTabItem>

            <!--start算力提取-->
            <controls:KbTabItem Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                <controls:KbTabItem.Header>
                    <TextBlock Text="{DynamicResource SpeedPick}" Padding="8 0"></TextBlock>
                </controls:KbTabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="540"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Margin="90 0 0 0" HorizontalAlignment="Left" Text="{DynamicResource MainCoin}"></TextBlock>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource TotalSpeedPattern}" ToolTip="{DynamicResource TotalSpeedPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding TotalSpeedPattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource TotalSharePattern}" ToolTip="{DynamicResource TotalSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding TotalSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource AcceptSharePattern}" ToolTip="{DynamicResource AcceptSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding AcceptSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource RejectSharePattern}" ToolTip="{DynamicResource RejectSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding RejectSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource RejectPercentPattern}" ToolTip="{DynamicResource RejectPercentPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding RejectPercentPattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource GpuSpeedPattern}" ToolTip="{DynamicResource GpuSpeedPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding GpuSpeedPattern}">
                            </TextBox>
                        </WrapPanel>

                        <TextBlock Margin="90 0 0 0" Text="{DynamicResource DualCoin}"></TextBlock>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualTotalSpeedPattern}" ToolTip="{DynamicResource DualTotalSpeedPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualTotalSpeedPattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualTotalSharePattern}" ToolTip="{DynamicResource DualTotalSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualTotalSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualAcceptSharePattern}" ToolTip="{DynamicResource DualAcceptSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualAcceptSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualRejectSharePattern}" ToolTip="{DynamicResource DualRejectSharePattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualRejectSharePattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualRejectPercentPattern}" ToolTip="{DynamicResource DualRejectPercentPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualRejectPercentPattern}">
                            </TextBox>
                        </WrapPanel>
                        <WrapPanel Margin="0 2">
                            <Label Content="{DynamicResource DualGpuSpeedPattern}" ToolTip="{DynamicResource DualGpuSpeedPattern}"></Label>
                            <TextBox 
							    Width="430"
							    VerticalContentAlignment="Center" Text="{Binding DualGpuSpeedPattern}">
                            </TextBox>
                        </WrapPanel>
                    </StackPanel>
                    <TextBox 
                        Grid.Column="1"
                        Margin="10 20 0 0"
                        Width="110"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        AcceptsReturn="True" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top"
                        IsReadOnly="True" 
                        Background="Transparent">
                        totalSpeed、totalSpeedUnit、totalShare、acceptShare、rejectShare、rejectPercent、gpu、gpuSpeed、gpuSpeedUnit
                    </TextBox>
                    <controls:KbButton
                        VerticalAlignment="Bottom"
                        Command="{Binding Save}" 
                        Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
                        Margin="0 10 0 0"
                        Width="70" 
                        Height="30"
                        Background="{StaticResource IconFillColor}"
                        Foreground="White"
                        CornerRadius="2">
                        <WrapPanel>
                            <Path
                                Width="12"
                                Height="12"
                                Data="{StaticResource Icon_Ok}"
                                Fill="White"
                                Stretch="Fill" />
                            <TextBlock
                                Padding="4"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="确定" />
                        </WrapPanel>
                    </controls:KbButton>
                </Grid>
            </controls:KbTabItem>
            <!--end算力提取-->

            <!--start支持币种-->
            <controls:KbTabItem Visibility="{Binding IsTransFilterVisible}">
                <controls:KbTabItem.Header>
                    <TextBlock Padding="8 0">支持币种</TextBlock>
                </controls:KbTabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <WrapPanel>
                        <Label Width="40">币种</Label>
                        <ComboBox 
                            x:Name="CbCoins"
                            BorderThickness="0"
						    Width="132" ItemsSource="{Binding KernelVmSingleInstance.CoinVms}" 
						    ItemTemplate="{StaticResource CoinCodeDataTemplate}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Height" Value="30"></Setter>
                                    <Setter  Property="IsEnabled" Value="{Binding IsSupported}" />
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <controls:KbButton 
                            Command="{Binding KernelVmSingleInstance.AddCoinKernel}" 
                            CommandParameter="{Binding ElementName=CbCoins, Path=SelectedItem}"
                            Background="Transparent" BorderThickness="0"
                            Margin="2 0"
                            CornerRadius="2" 
                            Content="添加">
                        </controls:KbButton>
                    </WrapPanel>
                    <DataGrid 
                        Grid.Row="1"
                        ItemsSource="{Binding KernelVmSingleInstance.CoinKernels}" 
                        BorderThickness="1 0 0 0" BorderBrush="{StaticResource LineColor}"
                        MouseDoubleClick="CoinKernelDataGrid_MouseDoubleClick">
                        <DataGrid.Resources>
                            <vm:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn 
                                MinWidth="100" CanUserResize="False" CanUserReorder="False" Header="币种"
                                CanUserSort="False" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel>
                                            <TextBlock Text="{Binding CoinCode}"></TextBlock>
                                            <TextBlock Text="-"></TextBlock>
                                            <TextBlock Text="{Binding CoinVm.Algo}"></TextBlock>
                                        </WrapPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="80" CanUserResize="False" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" Header="支持显卡">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel>
                                            <Path
                                                Margin="4 0 0 0"
				                                Width="18"
				                                Height="14"
                                                ToolTip="支持N卡"
                                                Visibility="{Binding IsNvidiaIconVisible}"
				                                Data="{StaticResource Icon_Nvidia}"
				                                Fill="Green"
				                                Stretch="Fill" />
                                            <Path
                                                Margin="4 0 0 0"
				                                Width="16"
				                                Height="14"
                                                ToolTip="支持A卡"
                                                Visibility="{Binding IsAMDIconVisible}"
				                                Data="{StaticResource Icon_AMD}"
				                                Fill="Red"
				                                Stretch="Fill" />
                                        </WrapPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="160" CanUserResize="False" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" Header="双挖币组">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DualCoinGroup.Name}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="*" CanUserResize="False" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" Header="币种级参数" Binding="{Binding Args}">
                            </DataGridTextColumn>
                            <DataGridTemplateColumn 
                                MinWidth="80" CanUserResize="False" CanUserSort="False" IsReadOnly="True"
                                Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Right" Background="Transparent" VerticalAlignment="Center" Orientation="Horizontal">
                                            <controls:KbButton Command="{Binding Edit}" Background="Transparent" BorderThickness="0"
                                                Margin="2 0"
                                                CornerRadius="2" ToolTip="编辑">
                                                <WrapPanel>
                                                    <Path
                                                        Width="18"
                                                        Height="18"
                                                        Data="{StaticResource Icon_Edit}"
                                                        Fill="{StaticResource IconFillColor}"
                                                        Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                            <controls:KbButton Command="{Binding Remove}" Background="Transparent" BorderThickness="0"
                                                Margin="2 0"
                                                CornerRadius="2" ToolTip="删除">
                                                <WrapPanel>
                                                    <Path
                                                        Width="18"
                                                        Height="18"
                                                        Data="{StaticResource Icon_Delete}"
                                                        Fill="{StaticResource IconFillColor}"
                                                        Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="1" Visibility="{Binding KernelVmSingleInstance.CoinKernels, Converter={StaticResource NoRecordConverter}}" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center">没有记录</TextBlock>
                </Grid>
            </controls:KbTabItem>
            <!--end支持币种-->

            <!--start翻译-->
            <controls:KbTabItem Visibility="{Binding IsTransFilterVisible}">
                <controls:KbTabItem.Header>
                    <TextBlock Padding="8 0">翻译</TextBlock>
                </controls:KbTabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.ColumnSpan="2" Margin="0,0,0,65">
                        <Path
						    Width="12"
						    Height="12"
						    Fill="{StaticResource IconFillColor}"
						    Stretch="Fill"
						    Data="{StaticResource Icon_Serach}"></Path>
                        <Label Padding="2 6" Width=" 30" HorizontalContentAlignment="Right">搜索</Label>
                        <controls:KbTextBox 
						    x:Name="TbTranslaterKeyword" Width="134" Height="20"
						    Text="{Binding TranslaterKeyword, UpdateSourceTrigger=PropertyChanged}" 
						    VerticalContentAlignment="Center"
						    Hint="请输入关键字"
						    BorderBrush="{StaticResource LineColor}"
						    BorderThickness="1"
						    Background="White"
						    SelectedColor="#409EFF" />
                        <controls:KbButton 
						    Background="Transparent" BorderThickness="0"
						    Height="20"
						    Command="{Binding ClearTranslaterKeyword}"
						    Visibility="{Binding ElementName=TbTranslaterKeyword,Path=Text, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
						    Margin="-14 0 0 0" HorizontalAlignment="Left">
                            <Path
							    Width="8"
							    Height="8"
							    Data="{StaticResource Icon_Close}"
							    Fill="{StaticResource IconFillColor}"
							    Stretch="Fill" />
                        </controls:KbButton>
                        <controls:KbLinkButton
						    Margin="20 0 0 0"
						    KbDisplayLine="False"
						    KbSystemButtonHoverBackground="Transparent" 
						    Background="Transparent"
						    Command="{Binding SelectCopySourceKernel}"
                            CommandParameter="output">
                            <WrapPanel>
                                <Path
								    Width="12"
								    Height="12"
								    Data="{StaticResource Icon_Kernel}"
								    Fill="{StaticResource IconFillColor}"
								    Stretch="Fill" />
                                <TextBlock Text="复制于"></TextBlock>
                            </WrapPanel>
                        </controls:KbLinkButton>
                    </WrapPanel>
                    <DataGrid
					    ItemsSource="{Binding KernelVmSingleInstance.KernelOutputTranslaters}" 
					    BorderThickness="1 0 0 0"
					    MouseDoubleClick="KernelOutputTranslaterDataGrid_MouseDoubleClick" Grid.ColumnSpan="2" Margin="0,27,0,0" Grid.RowSpan="2">
                        <DataGrid.Resources>
                            <!--  行样式触发  -->
                            <!--  背景色改变必须先设置cellStyle 因为cellStyle会覆盖rowStyle样式  -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <!--  隔行换色  -->
                                    <Trigger Property="AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="Black" />
                                    </Trigger>
                                    <Trigger Property="AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="Black" />
                                    </Trigger>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGray" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="DarkGray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!--  单元格样式触发  -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalAlignment" Value="Stretch" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Grid>
                                                <TextBlock />
                                                <ContentPresenter
												    Margin="5,0,0,0"
												    HorizontalAlignment="Left"
												    VerticalAlignment="Center" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="DarkGray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <vm:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Binding="{Binding RegexPattern}"  IsReadOnly="True">
                                <DataGridTextColumn.Header>
                                    <WrapPanel>
                                        <TextBlock>正则</TextBlock>
                                        <TextBlock Margin="4 0 0 0" Text="{Binding Data.KernelVmSingleInstance.KernelOutputTranslaters.Count, Source={StaticResource proxy}}"></TextBlock>
                                    </WrapPanel>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="*" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Header="替换为" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Replacement}" Foreground="{Binding ColorBrush}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="80" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Header="颜色" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ColorDescription}" Foreground="{Binding ColorBrush}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="40" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Header="前译" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsPreText}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="36" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Binding="{Binding SortNumber}" Header="排序" IsReadOnly="True">
                            </DataGridTextColumn>
                            <DataGridTemplateColumn MinWidth="80" CanUserResize="False" CanUserSort="False" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <controls:KbButton 
									    Command="{Binding Data.AddKernelOutputTranslater, Source={StaticResource proxy}}" 
									    Background="Transparent" BorderThickness="0"
									    Margin="10 0"
									    CornerRadius="2" ToolTip="添加">
                                        <WrapPanel>
                                            <Path
											    Width="18"
											    Height="18"
											    Data="{StaticResource Icon_Add}"
											    Fill="{StaticResource IconFillColor}"
											    Stretch="Fill" />
                                        </WrapPanel>
                                    </controls:KbButton>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Right" Background="Transparent" VerticalAlignment="Center" Orientation="Horizontal">
                                            <controls:KbButton 
											    Command="{Binding Edit}" Background="Transparent" BorderThickness="0"
											    Margin="2 0"
											    CornerRadius="2" ToolTip="编辑">
                                                <WrapPanel>
                                                    <Path
													    Width="18"
													    Height="18"
													    Data="{StaticResource Icon_Edit}"
													    Fill="{StaticResource IconFillColor}"
													    Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                            <controls:KbButton 
											    Command="{Binding Remove}" Background="Transparent" BorderThickness="0"
											    Margin="2 0"
											    CornerRadius="2" ToolTip="删除">
                                                <WrapPanel>
                                                    <Path
													    Width="18"
													    Height="18"
													    Data="{StaticResource Icon_Delete}"
													    Fill="{StaticResource IconFillColor}"
													    Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                            <WrapPanel Visibility="{Binding Data.TranslaterKeyword, Source={StaticResource proxy}, Converter={StaticResource NotNullOrEmptyVisibilityInvertConverter}}">
                                                <controls:KbButton 
												    Margin="2 0"
												    Command="{Binding SortUp}" Background="Transparent" BorderThickness="0"
												    CornerRadius="2" ToolTip="上移">
                                                    <WrapPanel>
                                                        <Path
														    Width="18"
														    Height="18"
														    Data="{StaticResource Icon_SortUp}"
														    Fill="{StaticResource IconFillColor}"
														    Stretch="Fill" />
                                                    </WrapPanel>
                                                </controls:KbButton>
                                                <controls:KbButton 
												    Margin="2 0"
												    Command="{Binding SortDown}" Background="Transparent" BorderThickness="0"
												    CornerRadius="2" ToolTip="下移">
                                                    <WrapPanel>
                                                        <Path
														    Width="18"
														    Height="18"
														    Data="{StaticResource Icon_SortDown}"
														    Fill="{StaticResource IconFillColor}"
														    Stretch="Fill" />
                                                    </WrapPanel>
                                                </controls:KbButton>
                                            </WrapPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="1" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding KernelVmSingleInstance.KernelOutputTranslaters, Converter={StaticResource NoRecordConverter}}" Grid.Column="1" Margin="225,117,532,228">没有记录</TextBlock>
                </Grid>
            </controls:KbTabItem>
            <!--end翻译-->

            <!--start过滤-->
            <controls:KbTabItem Visibility="{Binding IsTransFilterVisible}">
                <controls:KbTabItem.Header>
                    <TextBlock Padding="8 0">过滤</TextBlock>
                </controls:KbTabItem.Header>
                <Grid>
                    <DataGrid 
					    ItemsSource="{Binding KernelVmSingleInstance.KernelOutputFilters}" BorderThickness="1 0 0 0"
					    MouseDoubleClick="KernelOutputFilterDataGrid_MouseDoubleClick" Grid.ColumnSpan="2">
                        <DataGrid.Resources>
                            <vm:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" CanUserResize="False" CanUserReorder="False" CanUserSort="False" Binding="{Binding RegexPattern}"  IsReadOnly="True">
                                <DataGridTextColumn.Header>
                                    <WrapPanel>
                                        <TextBlock>正则</TextBlock>
                                        <TextBlock Margin="4 0 0 0" Text="{Binding Data.KernelVmSingleInstance.KernelOutputFilters.Count, Source={StaticResource proxy}}"></TextBlock>
                                    </WrapPanel>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn MinWidth="80" CanUserResize="False" CanUserSort="False" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <controls:KbButton 
									    Command="{Binding Data.AddKernelOutputFilter, Source={StaticResource proxy}}" 
									    Background="Transparent" BorderThickness="0"
									    Margin="10 0"
									    CornerRadius="2" ToolTip="添加">
                                        <WrapPanel>
                                            <Path
											    Width="18"
											    Height="18"
											    Data="{StaticResource Icon_Add}"
											    Fill="{StaticResource IconFillColor}"
											    Stretch="Fill" />
                                        </WrapPanel>
                                    </controls:KbButton>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel 
										    HorizontalAlignment="Right" 
										    Background="Transparent" 
										    VerticalAlignment="Center" 
										    Orientation="Horizontal">
                                            <controls:KbButton 
											    Command="{Binding Edit}" Background="Transparent" BorderThickness="0"
											    Margin="2 0"
											    CornerRadius="2" ToolTip="编辑">
                                                <WrapPanel>
                                                    <Path
													    Width="18"
													    Height="18"
													    Data="{StaticResource Icon_Edit}"
													    Fill="{StaticResource IconFillColor}"
													    Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                            <controls:KbButton 
											    Command="{Binding Remove}" 
											    Background="Transparent" 
											    BorderThickness="0"
											    Margin="2 0"
											    CornerRadius="2" ToolTip="删除">
                                                <WrapPanel>
                                                    <Path
													    Width="18"
													    Height="18"
													    Data="{StaticResource Icon_Delete}"
													    Fill="{StaticResource IconFillColor}"
													    Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" Visibility="{Binding KernelVmSingleInstance.KernelOutputFilters, Converter={StaticResource NoRecordConverter}}" Grid.Column="1">没有记录</TextBlock>
                </Grid>
            </controls:KbTabItem>
            <!--end过滤-->
        </TabControl>
        <controls:KbButton
            Margin="4"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
            ToolTip="KernelEdit translate"
            Command="{x:Static vm:AppStatic.ShowLangViewItems}"
            CommandParameter="KernelEdit"
            Background="Transparent">
            <WrapPanel>
                <Path
                    Width="14"
                    Height="14"
                    Data="{StaticResource Icon_Translate}"
                    Fill="Red"
                    Stretch="Fill" />
            </WrapPanel>
        </controls:KbButton>
    </Grid>
</UserControl>
