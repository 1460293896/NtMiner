<UserControl x:Class="NTMiner.Views.Ucs.MineWorkEdit"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
		mc:Ignorable="d"
		d:DataContext="{d:DesignData Source=Design/MineWorkViewModel.xaml}"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs" Background="White">
	<UserControl.Resources>
		<Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
			<Setter Property="Width" Value="60"></Setter>
		</Style>
		<sys:String x:Key="WindowTitle">
			作业
		</sys:String>
		<sys:String x:Key="ChkIsAutoBoot">
			开机自动启动
		</sys:String>
		<sys:String x:Key="ChkIsAutoStart">
			启动后自动开始挖矿
		</sys:String>
	</UserControl.Resources>
	<Grid Background="#EBF2F9">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="400"></ColumnDefinition>
			<ColumnDefinition Width="500"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="410"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<uc:MinerProfileIndex Grid.Row="0" BorderBrush="{StaticResource LineColor}" BorderThickness="0 0 1 0" />
		<WrapPanel Grid.Column="0" Grid.Row="0" Margin="10 0 8 2" VerticalAlignment="Bottom">
			<controls:KbCheckBox 
				Content="{DynamicResource ChkIsAutoBoot}"
				IconColor="{StaticResource IconFillColor}"
				IsChecked="{Binding MinerProfile.IsAutoBoot}" />
			<controls:KbCheckBox Margin="10 0 0 0"
				Content="{DynamicResource ChkIsAutoStart}"
				IconColor="{StaticResource IconFillColor}"
				IsChecked="{Binding MinerProfile.IsAutoStart}" />
		</WrapPanel>

		<TextBox 
			Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
			IsReadOnly="True"
			Background="Transparent" Padding="0 4"
			BorderBrush="{StaticResource LineColor}"
			BorderThickness="0 1 0 0"
			AcceptsReturn="True" TextWrapping="Wrap" 
			VerticalContentAlignment="Top"
			Text="{Binding MinerProfile.ArgsAssembly, Mode=OneWay}">
		</TextBox>
		<WrapPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0 2">
			<TextBlock Style="{StaticResource LblTb}">名称:</TextBlock>
			<TextBox Width="320" VerticalContentAlignment="Center" Background="White" Text="{Binding Name, ValidatesOnExceptions=True}">
			</TextBox>
			<TextBlock Style="{StaticResource LblTb}">备注:</TextBlock>
			<TextBox Width="420" Background="White" Padding="0 4"
					 AcceptsReturn="True" TextWrapping="Wrap" 
					 VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
					 Text="{Binding Description, Mode=TwoWay}">
			</TextBox>
		</WrapPanel>
		<uc:MinerProfileOption Grid.Row="0" Grid.Column="1">
		</uc:MinerProfileOption>
		<controls:KbButton
			Grid.Row="3" 
			Grid.ColumnSpan="2"
			HorizontalAlignment="Center"
			Command="{Binding Save}" 
			Padding="10 0"
			Margin="-76 4 4 4"
			Background="{StaticResource ThemeBackground}"
			Foreground="{StaticResource ThemeForeground}"
			CornerRadius="2">
			<WrapPanel>
				<Path
					Width="12"
					Height="12"
					Data="{StaticResource Icon_Ok}"
					Fill="{StaticResource ThemeForeground}"
					Stretch="Fill" />
				<TextBlock
					Padding="4"
					VerticalAlignment="Center"
					Foreground="{StaticResource ThemeForeground}"
					Text="确定" />
			</WrapPanel>
		</controls:KbButton>
	</Grid>
</UserControl>
