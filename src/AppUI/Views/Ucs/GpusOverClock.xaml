<UserControl x:Class="NTMiner.Views.Ucs.GpusOverClock"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		DataContext="{x:Static vm:GpusOverClockViewModel.Current}"
		mc:Ignorable="d" d:DesignHeight="430" d:DesignWidth="800">
	<UserControl.Resources>
		<sys:String x:Key="WindowTitle">
			超频
		</sys:String>
	</UserControl.Resources>
	<Grid Margin="0 0 20 0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"></ColumnDefinition>
			<ColumnDefinition Width="*" MaxWidth="700" MinWidth="300"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MaxHeight="400"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid Grid.RowSpan="2">
			<DataGrid 
				Grid.Row="1" Margin="0" 
				ItemsSource="{Binding CoinVms.MainCoins}" 
				BorderThickness="0 0 1 0" 
				BorderBrush="{StaticResource LineColor}"
				SelectedItem="{Binding CurrentCoin}" AutoGenerateColumns="False">
				<DataGrid.Resources>
					<vm:BindingProxy x:Key="proxy" Data="{Binding}" />
				</DataGrid.Resources>
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding CodeAlgo}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
						<DataGridTextColumn.Header>
							<WrapPanel>
								<TextBlock Text="币种"></TextBlock>
							</WrapPanel>
						</DataGridTextColumn.Header>
					</DataGridTextColumn>
				</DataGrid.Columns>
			</DataGrid>
			<TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding CoinVms.MainCoins, Converter={StaticResource NoRecordConverter}}" Foreground="Red" Text="{DynamicResource TbNoRecord}"></TextBlock>
		</Grid>
		<ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" PreviewMouseDown="ScrollViewer_PreviewMouseDown">
			<StackPanel>
				<ItemsControl 
					BorderThickness="0"
					ItemsSource="{Binding GpuOverClockVms}" 
					ScrollViewer.HorizontalScrollBarVisibility="Disabled">
					<ItemsControl.Resources>
						<vm:BindingProxy x:Key="proxy" Data="{Binding}" />
					</ItemsControl.Resources>
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel></WrapPanel>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Grid Width="130" Margin="2 2 0 0" Visibility="{Binding IsVisible}">
								<GroupBox BorderBrush="{StaticResource LineColor}" BorderThickness="1">
									<GroupBox.Header>
										<WrapPanel>
											<CheckBox IsChecked="{Binding IsEnabled}" Content="{Binding IndexText}"></CheckBox>
										</WrapPanel>
									</GroupBox.Header>
									<StackPanel>
										<WrapPanel>
											<TextBlock Margin="4 0 0 0" Text="{Binding Name}"></TextBlock>
										</WrapPanel>
										<WrapPanel>
											<TextBlock Width="30" TextAlignment="Right">核心</TextBlock>
											<TextBox Margin="4 0 0 0" Text="{Binding CoreClockDelta}" Width="70"></TextBox>
											<TextBlock>M</TextBlock>
										</WrapPanel>
										<WrapPanel>
											<TextBlock Width="30" TextAlignment="Right">显存</TextBlock>
											<TextBox Margin="4 0 0 0" Text="{Binding MemoryClockDelta}" Width="70"></TextBox>
											<TextBlock>M</TextBlock>
										</WrapPanel>
										<WrapPanel>
											<TextBlock Width="30" TextAlignment="Right">功耗</TextBlock>
											<TextBox Margin="4 0 0 0" Text="{Binding PowerCapacity}" Width="50"></TextBox>
											<TextBlock>%</TextBlock>
										</WrapPanel>
										<WrapPanel>
											<TextBlock Width="30" TextAlignment="Right">风扇</TextBlock>
											<TextBox Margin="4 0 0 0" Text="{Binding Cool}" Width="50"></TextBox>
											<TextBlock>%</TextBlock>
										</WrapPanel>
									</StackPanel>
								</GroupBox>
								<controls:KbButton
									ToolTip="应用该项"
									Visibility="{Binding IsGpuAllVm, Converter={StaticResource BoolToVisibilityInvertConverter}}"
									HorizontalAlignment="Right" VerticalAlignment="Top"
									Command="{Binding Apply}" 
									Background="{StaticResource IconFillColor}"
									Foreground="White"
									CornerRadius="2">
									<WrapPanel>
										<Path
											Width="14"
											Height="14"
											Data="{StaticResource Icon_Save}"
											Fill="White"
											Stretch="Fill" />
									</WrapPanel>
								</controls:KbButton>
							</Grid>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
				<WrapPanel VerticalAlignment="Center">
					<TextBlock>// TODO:超频建议</TextBlock>
				</WrapPanel>
			</StackPanel>
		</ScrollViewer>
		<WrapPanel Grid.Column="1" Grid.Row="1" Margin="0 0 0 10" HorizontalAlignment="Right">
			<TextBlock VerticalAlignment="Center">超频有风险，操作请谨慎。</TextBlock>
			<controls:KbButton
				ToolTip="应用选中的项"				
				Command="{Binding Apply}" 
				Width="60" 
				Background="{StaticResource IconFillColor}"
				Foreground="White"
				CornerRadius="2">
				<WrapPanel>
					<Path
						Width="12"
						Height="12"
						Data="{StaticResource Icon_Save}"
						Fill="White"
						Stretch="Fill" />
					<TextBlock
						Padding="4"
						VerticalAlignment="Center"
						Foreground="White"
						Text="应用" />
				</WrapPanel>
			</controls:KbButton>
		</WrapPanel>
	</Grid>
</UserControl>
