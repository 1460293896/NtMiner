<UserControl x:Class="NTMiner.Views.Ucs.GpusOverClock"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		DataContext="{x:Static vm:GpusOverClockViewModel.Current}"
		mc:Ignorable="d" MaxHeight="400" MaxWidth="800">
	<UserControl.Resources>
		<sys:String x:Key="WindowTitle">
			超频
		</sys:String>
	</UserControl.Resources>
	<Grid Margin="10 6">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<ItemsControl 
			Visibility="{Binding GpuAllOverClockDataVm.IsEnabled, Converter={StaticResource BoolToVisibilityInvertConverter}}"
			BorderThickness="0"
			ItemsSource="{Binding GpuOverClockVms.List}" 
			ScrollViewer.HorizontalScrollBarVisibility="Disabled">
			<ItemsControl.Resources>
				<vm:BindingProxy x:Key="proxy" Data="{Binding}" />
			</ItemsControl.Resources>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel></WrapPanel>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Grid Width="160" Margin="4">
						<GroupBox BorderBrush="{StaticResource LineColor}" BorderThickness="1">
							<GroupBox.Header>
								<WrapPanel>
									<CheckBox IsChecked="{Binding IsEnabled}" Content="{Binding IndexText}"></CheckBox>
								</WrapPanel>
							</GroupBox.Header>
							<StackPanel>
								<WrapPanel>
									<TextBlock Margin="4 0 0 0" Text="{Binding Name}"></TextBlock>
								</WrapPanel>
								<WrapPanel>
									<TextBlock Width="40" TextAlignment="Right">超核心</TextBlock>
									<TextBox Margin="4 0 0 0" Text="{Binding CoreClockDelta}" Width="70"></TextBox>
									<TextBlock>M</TextBlock>
								</WrapPanel>
								<WrapPanel>
									<TextBlock Width="40" TextAlignment="Right">超显存</TextBlock>
									<TextBox Margin="4 0 0 0" Text="{Binding MemoryClockDelta}" Width="70"></TextBox>
									<TextBlock>M</TextBlock>
								</WrapPanel>
								<WrapPanel>
									<TextBlock Width="40" TextAlignment="Right">功耗</TextBlock>
									<TextBox Margin="4 0 0 0" Text="{Binding PowerCapacity}" Width="50"></TextBox>
									<TextBlock>%</TextBlock>
								</WrapPanel>
								<WrapPanel>
									<TextBlock Width="40" TextAlignment="Right">风扇</TextBlock>
									<TextBox Margin="4 0 0 0" Text="{Binding Cool}" Width="50"></TextBox>
									<TextBlock>%</TextBlock>
								</WrapPanel>
							</StackPanel>
						</GroupBox>
						<controls:KbButton
							ToolTip="应用该项"
							HorizontalAlignment="Right" VerticalAlignment="Top"
							Command="{Binding Apply}" 
							Background="{StaticResource IconFillColor}"
							Foreground="White"
							CornerRadius="2">
							<WrapPanel>
								<Path
									Width="14"
									Height="14"
									Data="{StaticResource Icon_Save}"
									Fill="White"
									Stretch="Fill" />
							</WrapPanel>
						</controls:KbButton>
					</Grid>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Grid Width="160" Margin="4" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
			<GroupBox BorderBrush="{StaticResource LineColor}" BorderThickness="1">
				<GroupBox.Header>
					<WrapPanel>
						<CheckBox IsChecked="{Binding GpuAllOverClockDataVm.IsEnabled}" Content="{Binding GpuAllOverClockDataVm.IndexText}"></CheckBox>
					</WrapPanel>
				</GroupBox.Header>
				<StackPanel>
					<WrapPanel>
						<TextBlock Margin="4 0 0 0" Text="{Binding GpuAllOverClockDataVm.Name}"></TextBlock>
					</WrapPanel>
					<WrapPanel>
						<TextBlock Width="40" TextAlignment="Right">超核心</TextBlock>
						<TextBox Margin="4 0 0 0" Text="{Binding GpuAllOverClockDataVm.CoreClockDelta}" Width="70"></TextBox>
						<TextBlock>M</TextBlock>
					</WrapPanel>
					<WrapPanel>
						<TextBlock Width="40" TextAlignment="Right">超显存</TextBlock>
						<TextBox Margin="4 0 0 0" Text="{Binding GpuAllOverClockDataVm.MemoryClockDelta}" Width="70"></TextBox>
						<TextBlock>M</TextBlock>
					</WrapPanel>
					<WrapPanel>
						<TextBlock Width="40" TextAlignment="Right">功耗</TextBlock>
						<TextBox Margin="4 0 0 0" Text="{Binding GpuAllOverClockDataVm.PowerCapacity}" Width="50"></TextBox>
						<TextBlock>%</TextBlock>
					</WrapPanel>
					<WrapPanel>
						<TextBlock Width="40" TextAlignment="Right">风扇</TextBlock>
						<TextBox Margin="4 0 0 0" Text="{Binding GpuAllOverClockDataVm.Cool}" Width="50"></TextBox>
						<TextBlock>%</TextBlock>
					</WrapPanel>
				</StackPanel>
			</GroupBox>
		</Grid>
		<StackPanel Visibility="Collapsed">
			<WrapPanel Height="40">
				<TextBlock Width="60" TextAlignment="Right">超核心</TextBlock>
				<Slider 
					Margin="4 0 0 0"
					Minimum="-400" 
					Maximum="400" 
					Width="500"
					TickFrequency="1"
					Value="{Binding CurrentGpuOverClockDataVm.CoreClockDelta}"></Slider>
			</WrapPanel>
			<WrapPanel Height="40">
				<TextBlock Width="60" TextAlignment="Right">超显存</TextBlock>
				<Slider 
					Margin="4 0 0 0"
					Minimum="-1000" 
					Maximum="1000" 
					Width="500"
					TickFrequency="1"
					Value="{Binding CurrentGpuOverClockDataVm.MemoryClockDelta}"></Slider>
			</WrapPanel>
			<WrapPanel Height="40">
				<TextBlock Width="60" TextAlignment="Right">功耗</TextBlock>
				<Slider 
					Margin="4 0 0 0"
					Minimum="30" 
					Maximum="110" 
					Width="500"
					TickFrequency="1"
					Value="{Binding CurrentGpuOverClockDataVm.PowerCapacity}"></Slider>
			</WrapPanel>
			<WrapPanel Height="40">
				<TextBlock Width="60" TextAlignment="Right">风扇</TextBlock>
				<Slider 
					Margin="4 0 0 0"
					Minimum="30" 
					Maximum="100" 
					Width="500"
					TickFrequency="1"
					Value="{Binding CurrentGpuOverClockDataVm.Cool}"></Slider>
			</WrapPanel>
		</StackPanel>
		<controls:KbButton
			Grid.Row="1"
			Margin="0 0 4 0"
			ToolTip="应用选中的项"
			HorizontalAlignment="Right"
			Command="{Binding Apply}" 
			Width="60" 
			Background="{StaticResource IconFillColor}"
			Foreground="White"
			CornerRadius="2">
			<WrapPanel>
				<Path
					Width="12"
					Height="12"
					Data="{StaticResource Icon_Save}"
					Fill="White"
					Stretch="Fill" />
				<TextBlock
					Padding="4"
					VerticalAlignment="Center"
					Foreground="White"
					Text="应用" />
			</WrapPanel>
		</controls:KbButton>
	</Grid>
</UserControl>
