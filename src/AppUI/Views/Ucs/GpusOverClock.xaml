<UserControl x:Class="NTMiner.Views.Ucs.GpusOverClock"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		DataContext="{x:Static vm:GpusOverClockViewModel.Current}"
		mc:Ignorable="d" d:DesignHeight="430" d:DesignWidth="800">
	<UserControl.Resources>
		<sys:String x:Key="WindowTitle">
			超频
		</sys:String>
	</UserControl.Resources>
	<Grid Margin="0 0 20 0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"></ColumnDefinition>
			<ColumnDefinition Width="*" MaxWidth="700" MinWidth="300"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*" MaxHeight="400"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid Grid.RowSpan="2">
			<DataGrid 
				Grid.Row="1" Margin="0" 
				ItemsSource="{Binding CoinVms.MainCoins}" 
				BorderThickness="0 0 1 0" 
				BorderBrush="{StaticResource LineColor}"
				SelectedItem="{Binding CurrentCoin}" AutoGenerateColumns="False">
				<DataGrid.Resources>
					<vm:BindingProxy x:Key="proxy" Data="{Binding}" />
				</DataGrid.Resources>
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding CodeAlgo}" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
						<DataGridTextColumn.Header>
							<WrapPanel>
								<TextBlock Text="币种"></TextBlock>
							</WrapPanel>
						</DataGridTextColumn.Header>
					</DataGridTextColumn>
				</DataGrid.Columns>
			</DataGrid>
			<TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding CoinVms.MainCoins, Converter={StaticResource NoRecordConverter}}" Foreground="Red" Text="{DynamicResource TbNoRecord}"></TextBlock>
		</Grid>
		<Grid Grid.Row="0" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<WrapPanel VerticalAlignment="Center">
				<CheckBox 
					IsChecked="{Binding GpuAllOverClockDataVm.IsEnabled}" 
					Content="统一超频"></CheckBox>
				<TextBlock>TODO://超频建议</TextBlock>
			</WrapPanel>
			<WrapPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
				<TextBlock>超频有风险，操作请谨慎。</TextBlock>
				<controls:KbButton
					ToolTip="超选中的卡"
					Command="{Binding Apply}" 
					Background="{StaticResource IconFillColor}"
					Foreground="White"
					CornerRadius="2">
					<WrapPanel>
						<Path
							Width="14"
							Height="14"
							Data="{StaticResource Icon_Save}"
							Fill="White"
							Stretch="Fill" />
					</WrapPanel>
				</controls:KbButton>
			</WrapPanel>
		</Grid>
		<ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" PreviewMouseDown="ScrollViewer_PreviewMouseDown">
			<ItemsControl 
				BorderThickness="0"
				ItemsSource="{Binding GpuOverClockVms}" 
				ScrollViewer.HorizontalScrollBarVisibility="Disabled">
				<ItemsControl.Resources>
					<vm:BindingProxy x:Key="proxy" Data="{Binding}" />
				</ItemsControl.Resources>
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel></WrapPanel>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid Width="160" Margin="2 2 0 0" Visibility="{Binding IsVisible}">
							<GroupBox BorderBrush="{StaticResource LineColor}" BorderThickness="1" Padding="4 0 4 4">
								<GroupBox.Header>
									<WrapPanel>
										<CheckBox 
											Visibility="{Binding IsGpuAllVm,Converter={StaticResource BoolToVisibilityInvertConverter}}"
											IsChecked="{Binding IsEnabled}" 
											Content="{Binding IndexText}"></CheckBox>
										<TextBlock Text="GPU All" Visibility="{Binding IsGpuAllVm,Converter={StaticResource BoolToVisibilityConverter}}"></TextBlock>
									</WrapPanel>
								</GroupBox.Header>
								<StackPanel>
									<WrapPanel HorizontalAlignment="Center">
										<TextBlock Text="{Binding Name}"></TextBlock>
									</WrapPanel>
									<WrapPanel>
										<TextBlock Width="40" TextAlignment="Right">核心</TextBlock>
										<TextBox Margin="4 0 0 0" Text="{Binding CoreClockDelta, ValidatesOnExceptions=True}" Width="70"></TextBox>
										<TextBlock>M</TextBlock>
									</WrapPanel>
									<WrapPanel>
										<TextBlock Width="40" TextAlignment="Right">显存</TextBlock>
										<TextBox Margin="4 0 0 0" Text="{Binding MemoryClockDelta, ValidatesOnExceptions=True}" Width="70"></TextBox>
										<TextBlock>M</TextBlock>
									</WrapPanel>
									<WrapPanel>
										<TextBlock Width="40" TextAlignment="Right">功耗</TextBlock>
										<TextBox Margin="4 0 0 0" Text="{Binding PowerCapacity, ValidatesOnExceptions=True}" Width="70"></TextBox>
										<TextBlock>%</TextBlock>
									</WrapPanel>
									<WrapPanel>
										<TextBlock Width="40" TextAlignment="Right">风扇</TextBlock>
										<TextBox Margin="4 0 0 0" Text="{Binding Cool, ValidatesOnExceptions=True}" Width="70"></TextBox>
										<TextBlock>%</TextBlock>
									</WrapPanel>
								</StackPanel>
							</GroupBox>
							<controls:KbButton
								ToolTip="超该卡"
								Visibility="{Binding IsGpuAllVm, Converter={StaticResource BoolToVisibilityInvertConverter}}"
								HorizontalAlignment="Right" VerticalAlignment="Top"
								Command="{Binding Apply}" 
								Background="{StaticResource IconFillColor}"
								Foreground="White"
								CornerRadius="2">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_Save}"
										Fill="White"
										Stretch="Fill" />
								</WrapPanel>
							</controls:KbButton>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
	</Grid>
</UserControl>
