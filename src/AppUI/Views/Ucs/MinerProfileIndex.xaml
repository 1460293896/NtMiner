<UserControl x:Class="NTMiner.Views.Ucs.MinerProfileIndex"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
			 xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
			 xmlns:local="clr-namespace:NTMiner.Views.Ucs"
			 xmlns:vm="clr-namespace:NTMiner.Vms"
			 mc:Ignorable="d" 
             BorderBrush="{StaticResource LineColor}"
             BorderThickness="0 0 1 0"
			 TextOptions.TextFormattingMode="Display"  
			 DataContext="{x:Static vm:MinerProfileIndexViewModel.Current}"
			 d:DesignHeight="450" d:DesignWidth="394">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AppUI;component/Styles/KbCoinCode.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AppUI;component/Styles/KbWallet.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="LblTb" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="Foreground" Value="{StaticResource LableColor}"></Setter>
                <Setter Property="Padding" Value="0 0 4 0"></Setter>
                <Setter Property="Width" Value="58"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="TextAlignment" Value="Right"></Setter>
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
            </Style>
            <sys:String x:Key="MinerName">
                MinerName
            </sys:String>
            <sys:String x:Key="MinerNameTip">
                MinerNameTip
            </sys:String>
            <sys:String x:Key="UseThisPcName">
                UseThisPcName
            </sys:String>
            <sys:String x:Key="MainCoin">
                MainCoin
            </sys:String>
            <sys:String x:Key="MainPool">
                MainPool
            </sys:String>
            <sys:String x:Key="MainWallet">
                MainWallet
            </sys:String>
            <sys:String x:Key="Kernel">
                Kernel
            </sys:String>
            <sys:String x:Key="IsDualCoinEnabled">
                IsDualCoinEnabled
            </sys:String>
            <sys:String x:Key="DualCoinWeight">
                DualCoinWeight
            </sys:String>
            <sys:String x:Key="DualWeightWarning">
                DualWeightWarning
            </sys:String>
            <sys:String x:Key="IsAutoDualWeight">
                IsAutoDualWeight
            </sys:String>
            <sys:String x:Key="DualCoin">
                DualCoin
            </sys:String>
            <sys:String x:Key="DualPool">
                DualPool
            </sys:String>
            <sys:String x:Key="DualWallet">
                DualWallet
            </sys:String>
            <sys:String x:Key="CustomArgs">
                CustomArgs
            </sys:String>
            <sys:String x:Key="Manage">
                Manage
            </sys:String>
            <sys:String x:Key="AddWallet">
                AddWallet
            </sys:String>
            <sys:String x:Key="ShowWalletAddress">
                ShowWalletAddress
            </sys:String>
            <sys:String x:Key="HideWalletAddress">
                HideWalletAddress
            </sys:String>
            <sys:String x:Key="CopyWalletAddress">
                CopyWalletAddress
            </sys:String>
            <sys:String x:Key="CustomArgsTip">
                CustomArgsTip
            </sys:String>
        </ResourceDictionary>
	</UserControl.Resources>
    <Grid Background="#F5F5F5">
		<StackPanel Margin="2 8 2 8">
			<WrapPanel Margin="0">
				<StackPanel IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
					<WrapPanel VerticalAlignment="Center">
                        <TextBlock 
                            Style="{StaticResource LblTb}"
                            ToolTip="{DynamicResource MinerName}"
                            Text="{DynamicResource MinerName}"></TextBlock>
                        <TextBox 
                            Height="26"
							IsReadOnly="{Binding ElementName=ChkbAutoThisPCName, Path=IsChecked}"
							Width="136" Background="White"
							Text="{Binding MinerProfile.MinerName, UpdateSourceTrigger=LostFocus}" 
							VerticalContentAlignment="Center">
							<TextBox.ToolTip>
								<StackPanel>
									<TextBlock Text="{DynamicResource MinerNameTip}"></TextBlock>
								</StackPanel>
							</TextBox.ToolTip>
                        </TextBox>
                    </WrapPanel>
                    <WrapPanel Margin="0 2">
                        <TextBlock Style="{StaticResource LblTb}" Height="14">
                        </TextBlock>
                        <controls:KbCheckBox 
                            Padding="0" 
                            x:Name="ChkbAutoThisPCName" 
						    IconColor="{StaticResource IconFillColor}"
                            IsChecked="{Binding MinerProfile.IsAutoThisPCName}" 
                            VerticalAlignment="Center"
                            Content="{DynamicResource UseThisPcName}"></controls:KbCheckBox>
					</WrapPanel>
				</StackPanel>
			</WrapPanel>

            <StackPanel>
                <WrapPanel Margin="0 3">
                    <TextBlock
                        Style="{StaticResource LblTb}"
                        ToolTip="{DynamicResource MainCoin}"
						Text="{DynamicResource MainCoin}" />
                    <controls:KbComboBox 
                        BorderThickness="0"
                        Height="30"
						Width="136" 
                        ItemsSource="{Binding MinerProfile.CoinVms.MainCoins}" 
						IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
						ItemTemplate="{StaticResource CoinCodeDataTemplate}"
						SelectedItem="{Binding MinerProfile.CoinVm}">
                        <controls:KbComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Height" Value="30"></Setter>
                                <Setter  Property="IsEnabled" Value="{Binding IsSupported}" />
                            </Style>
                        </controls:KbComboBox.ItemContainerStyle>
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Command="{x:Static vm:AppStatic.ShowCoins}"
                                    Background="{StaticResource IconFillColor}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Coin}"
                                            Fill="White"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                    </controls:KbComboBox>
                    <TextBlock 
                        Margin="2 0 0 0"
                        Style="{StaticResource LblTb}"
                        ToolTip="{DynamicResource MainPool}"
						Text="{DynamicResource MainPool}" />
                    <controls:KbComboBox 
                        BorderThickness="0"
						DisplayMemberPath="Name"
                        Height="30"
						Width="134" 
                        ItemsSource="{Binding MinerProfile.CoinVm.Pools}" 
						IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
						SelectedItem="{Binding MinerProfile.CoinVm.CoinProfile.MainCoinPool}">
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Background="{StaticResource IconFillColor}"
                                    Command="{x:Static vm:AppStatic.ManagePools}"
                                    CommandParameter="{Binding MinerProfile.CoinVm}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Pool}"
                                            Fill="White"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                    </controls:KbComboBox>
                </WrapPanel>

                <WrapPanel Margin="0 3">
                    <TextBlock
                        Style="{StaticResource LblTb}"
                        ToolTip="{DynamicResource MainWallet}"
						Text="{DynamicResource MainWallet}" />
                    <TextBox 
						Visibility="Collapsed" 
						Text="{Binding ElementName=CbMainWallet, Path=Text}" TextChanged="TbMainWallet_TextChanged"></TextBox>
                    <controls:KbComboBox 
                        BorderThickness="0"
						x:Name="CbMainWallet" 
						ItemsSource="{Binding MinerProfile.CoinVm.Wallets}"
						VerticalContentAlignment="Center" Width="330"
						IsEditable="False"
						IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
						ItemTemplate="{StaticResource WalletAddressDataTemplate}"
						ItemContainerStyle="{StaticResource WalletItemContainerStyle}"
						SelectedItem="{Binding MinerProfile.CoinVm.CoinProfile.SelectedWallet}">
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right">
                                <controls:KbButton 
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Background="{StaticResource IconFillColor}"
                                    CornerRadius="2"
							        Command="{Binding MinerProfile.CoinVm.CoinProfile.AddWallet}"
							        IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Add}"
                                            Fill="White"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource AddWallet}" Foreground="White"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Background="{StaticResource IconFillColor}"
                                    Command="{x:Static vm:AppStatic.ManageWallet}"
                                    CommandParameter="{Binding MinerProfile.CoinVm}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="12"
                                            Height="14"
                                            Data="{StaticResource Icon_Wallet}"
                                            Fill="White"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                    </controls:KbComboBox>
                    <WrapPanel Margin="-70 1 0 0" Width="50">
                        <controls:KbButton 
							Padding="2"
							Margin="0 -1 -4 2"
							VerticalAlignment="Bottom"
							ToolTip="{DynamicResource ShowWalletAddress}"
							Background="Transparent" BorderThickness="0"
							Command="{Binding MinerProfile.CoinVm.CoinProfile.ShowWallet}"
							HorizontalAlignment="Left">
                            <Path
								Visibility="{Binding MinerProfile.CoinVm.CoinProfile.IsHideWallet, Converter={StaticResource BoolToVisibilityConverter}}"
								Width="16"
								Height="8"
								Data="{StaticResource Icon_CloseEye}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
                        </controls:KbButton>
                        <controls:KbButton 
							Padding="2"
							ToolTip="{DynamicResource HideWalletAddress}"
							Background="Transparent" BorderThickness="0"
							Command="{Binding MinerProfile.CoinVm.CoinProfile.HideWallet}"
							HorizontalAlignment="Left">
                            <Path
								Visibility="{Binding MinerProfile.CoinVm.CoinProfile.IsShowWallet, Converter={StaticResource BoolToVisibilityConverter}}"
								Width="16"
								Height="12"
								Data="{StaticResource Icon_OpenEye}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
                        </controls:KbButton>
                        <controls:KbButton 
                            Margin="4 0 0 0"
							Padding="2"
							Visibility="{Binding ElementName=CbMainWallet, Path=SelectedItem, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
							ToolTip="{DynamicResource CopyWalletAddress}"
							Background="Transparent" BorderThickness="0"
							Command="{Binding MinerProfile.CoinVm.CoinProfile.CopyWallet}"
							HorizontalAlignment="Left">
                            <Path
								Width="14"
								Height="14"
								Data="{StaticResource Icon_Copy}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
                        </controls:KbButton>
                    </WrapPanel>
                    <Border 
						Background="White"
						Width="308" 
                        Height="18" 
                        Margin="60 -20 0 0" 
                        Padding="3 0 0 0" 
                        VerticalAlignment="Center"
						Visibility="{Binding MinerProfile.CoinVm.CoinProfile.IsHideWallet, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock FontSize="18">*************************************</TextBlock>
                    </Border>
                </WrapPanel>

                <WrapPanel Margin="0 3">
                    <TextBlock
                        Style="{StaticResource LblTb}"
                        ToolTip="{DynamicResource Kernel}"
						Text="{DynamicResource Kernel}" />
                    <controls:KbComboBox 
                        BorderThickness="0"
						x:Name="CbKernel"
                        Height="30"
						ItemsSource="{Binding MinerProfile.CoinVm.CoinKernels}" 
						IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
						SelectedItem="{Binding MinerProfile.CoinVm.CoinKernel}">
                        <controls:KbComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Height" Value="30"></Setter>
                                <Setter  Property="IsEnabled" Value="{Binding IsSupported}" />
                            </Style>
                        </controls:KbComboBox.ItemContainerStyle>
                        <controls:KbComboBox.ItemTemplate>
							<DataTemplate>
                                <StackPanel>
									<WrapPanel>
										<TextBlock Text="{Binding Kernel.Code}"></TextBlock>
                                        <TextBlock Text="{Binding Kernel.Version}" Margin="4 0 0 0"></TextBlock>
                                        <Path
                                            Margin="4 0 0 0"
							                Width="18"
							                Height="14"
                                            ToolTip="NVIDIA"
                                            Visibility="{Binding IsNvidiaIconVisible}"
							                Data="{StaticResource Icon_Nvidia}"
							                Fill="Green"
							                Stretch="Fill" />
                                        <Path
                                            Margin="4 0 0 0"
							                Width="16"
							                Height="14"
                                            ToolTip="AMD"
                                            Visibility="{Binding IsAMDIconVisible}"
							                Data="{StaticResource Icon_AMD}"
							                Fill="Red"
							                Stretch="Fill" />
                                    </WrapPanel>
								</StackPanel>
							</DataTemplate>
                        </controls:KbComboBox.ItemTemplate>
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Background="{StaticResource IconFillColor}"
                                    Command="{x:Static vm:AppStatic.ShowKernels}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Kernel}"
                                            Fill="White"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                    </controls:KbComboBox>
                    <controls:KbButton
                        BorderThickness="0"
                        Margin="4 0 0 0"
                        Height="20"
                        Padding="4 0"
                        Background="Transparent"
                        Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
                        Command="{Binding MinerProfile.CoinVm.CoinKernel.Kernel.Edit}"
                        CornerRadius="2">
                        <Path
                            Width="14"
                            Height="14"
                            Data="{StaticResource Icon_Edit}"
                            Fill="{StaticResource IconFillColor}"
                            Stretch="Fill" />
                    </controls:KbButton>
                    <WrapPanel 
					    Margin="4 0 0 0"
                        VerticalAlignment="Center"
					    IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}" 
					    Visibility="{Binding MinerProfile.CoinVm.CoinKernel.IsSupportDualMine, Converter={StaticResource BoolToVisibilityConverter}}">
                        <controls:KbCheckBox
						    Content="{DynamicResource IsDualCoinEnabled}"
						    IconColor="{StaticResource IconFillColor}"
						    IsChecked="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled}" />
                    </WrapPanel>
                </WrapPanel>

                <WrapPanel                    
					IsEnabled="{Binding MinerProfile.CoinVm.CoinKernel.IsSupportDualMine}"
					Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel
						Visibility="{Binding MinerProfile.CoinVm.CoinKernel.IsSupportDualMine, Converter={StaticResource BoolToVisibilityConverter}}">
                        <WrapPanel 
                            Margin="0 3"
                            VerticalAlignment="Center"
                            Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock
                                Style="{StaticResource LblTb}"
                                ToolTip="{DynamicResource DualCoinWeight}"
						        Text="{DynamicResource DualCoinWeight}" />
                            <controls:KbCheckBox
						        Content="{DynamicResource IsAutoDualWeight}"
						        IconColor="{StaticResource IconFillColor}"
                                IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
                                Visibility="{Binding MinerProfile.CoinVm.CoinKernel.Kernel.KernelInputVm.IsAutoDualWeight, Converter={StaticResource BoolToVisibilityConverter}}"
						        IsChecked="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsAutoDualWeight}" />
                            <WrapPanel 
                                Margin="4 0 0 0"
                                VerticalAlignment="Center"
							    Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsAutoDualWeight, Converter={StaticResource BoolToVisibilityInvertConverter}}">
                                <Slider 
							        x:Name="dualCoinWeightSlider" 
                                    Minimum="{Binding MinerProfile.CoinVm.CoinKernel.Kernel.KernelInputVm.DualWeightMin}" 
                                    Maximum="{Binding MinerProfile.CoinVm.CoinKernel.Kernel.KernelInputVm.DualWeightMax}" 
                                    Width="100"
							        IsSnapToTickEnabled="True"
                                    ToolTip="{DynamicResource DualWeightWarning}"
                                    LostFocus="DualCoinWeightSlider_LostFocus"
							        Value="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.DualCoinWeight}"
                                    IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"></Slider>
                                <TextBox 
                                    Text="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.DualCoinWeight, UpdateSourceTrigger=PropertyChanged}"
                                    LostFocus="DualCoinWeightSlider_LostFocus"></TextBox>
                                <TextBlock Text="%"></TextBlock>
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel Margin="0 3">
                            <TextBlock
                                Style="{StaticResource LblTb}"
                                ToolTip="{DynamicResource DualCoin}"
								Text="{DynamicResource DualCoin}" />
                            <DockPanel IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
                                <controls:KbComboBox 
                                    BorderThickness="0"
                                    Height="30"
									Width="136" 
                                    ItemsSource="{Binding MinerProfile.CoinVm.CoinKernel.DualCoinGroup.DualCoinVms}"
									ItemTemplate="{StaticResource CoinCodeDataTemplate}"
									IsEnabled="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled}"
									SelectedItem="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin}">
                                    <controls:KbComboBox.Toolbar>
                                        <WrapPanel HorizontalAlignment="Right" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
                                            <controls:KbButton
                                                Margin="4 2"
                                                BorderThickness="0"
                                                Height="24"
                                                Padding="4 0"
                                                Command="{x:Static vm:AppStatic.ShowCoins}"
                                                Background="{StaticResource IconFillColor}"
                                                CornerRadius="2">
                                                <WrapPanel>
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="{StaticResource Icon_Coin}"
                                                        Fill="White"
                                                        Stretch="Fill" />
                                                    <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                                </WrapPanel>
                                            </controls:KbButton>
                                        </WrapPanel>
                                    </controls:KbComboBox.Toolbar>
                                </controls:KbComboBox>
                            </DockPanel>
                            <TextBlock
                                Margin="2 0 0 0"
                                Style="{StaticResource LblTb}"
                                ToolTip="{DynamicResource DualPool}"
								Text="{DynamicResource DualPool}" />
                            <DockPanel IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
                                <controls:KbComboBox 
                                    BorderThickness="0"
									DisplayMemberPath="Name"
                                    Height="30"
									Width="134" 
                                    ItemsSource="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.Pools}"
									IsEnabled="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled}"
									SelectedItem="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.DualCoinPool}">
                                    <controls:KbComboBox.Toolbar>
                                        <WrapPanel HorizontalAlignment="Right">
                                            <controls:KbButton
                                                Margin="4 2"
                                                BorderThickness="0"
                                                Height="24"
                                                Padding="4 0"
                                                Background="{StaticResource IconFillColor}"
                                                Command="{x:Static vm:AppStatic.ManagePools}"
                                                CommandParameter="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin}"
                                                CornerRadius="2">
                                                <WrapPanel>
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="{StaticResource Icon_Pool}"
                                                        Fill="White"
                                                        Stretch="Fill" />
                                                    <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                                </WrapPanel>
                                            </controls:KbButton>
                                        </WrapPanel>
                                    </controls:KbComboBox.Toolbar>
                                </controls:KbComboBox>
							</DockPanel>
						</WrapPanel>
                        <WrapPanel Margin="0 3">
                            <WrapPanel>
                                <TextBlock
                                    Style="{StaticResource LblTb}"
                                    ToolTip="{DynamicResource DualWallet}"
									Text="{DynamicResource DualWallet}" />
                                <DockPanel IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
									<TextBox Visibility="Collapsed" Text="{Binding ElementName=CbDualCoinWallet, Path=Text}" TextChanged="TbDualCoinWallet_TextChanged"></TextBox>
                                    <controls:KbComboBox 
                                        BorderThickness="0"
										x:Name="CbDualCoinWallet" 
										ItemsSource="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.Wallets}"
										VerticalContentAlignment="Center" Width="330"
										IsEnabled="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.IsDualCoinEnabled}"
										IsEditable="False"
										ItemTemplate="{StaticResource WalletAddressDataTemplate}"
										ItemContainerStyle="{StaticResource WalletItemContainerStyle}"
										SelectedItem="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.SelectedDualCoinWallet}">
                                        <controls:KbComboBox.Toolbar>
                                            <WrapPanel HorizontalAlignment="Right">
                                                <controls:KbButton 
                                                    Margin="4 2"
                                                    BorderThickness="0"
                                                    Height="24"
                                                    Padding="4 0"
                                                    Background="{StaticResource IconFillColor}"
                                                    CornerRadius="2"
									                Command="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.AddDualCoinWallet}"
									                IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}">
                                                    <WrapPanel>
                                                        <Path
                                                            Width="14"
                                                            Height="14"
                                                            Data="{StaticResource Icon_Add}"
                                                            Fill="White"
                                                            Stretch="Fill" />
                                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource AddWallet}" Foreground="White"></TextBlock>
                                                    </WrapPanel>
                                                </controls:KbButton>
                                                <controls:KbButton
                                                    Margin="4 2"
                                                    BorderThickness="0"
                                                    Height="24"
                                                    Padding="4 0"
                                                    Background="{StaticResource IconFillColor}"
                                                    Command="{x:Static vm:AppStatic.ManageWallet}"
                                                    CommandParameter="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin}"
                                                    CornerRadius="2">
                                                    <WrapPanel>
                                                        <Path
                                                            Width="12"
                                                            Height="14"
                                                            Data="{StaticResource Icon_Wallet}"
                                                            Fill="White"
                                                            Stretch="Fill" />
                                                        <TextBlock Margin="4 0 0 0" Text="{DynamicResource Manage}" Foreground="White"></TextBlock>
                                                    </WrapPanel>
                                                </controls:KbButton>
                                            </WrapPanel>
                                        </controls:KbComboBox.Toolbar>
                                    </controls:KbComboBox>
								</DockPanel>
							</WrapPanel>
                            <WrapPanel Margin="-70 1 0 0" VerticalAlignment="Top" Width="50">
								<controls:KbButton 
									Padding="2"
									Margin="0 -1 -4 2"
									VerticalAlignment="Bottom"
									ToolTip="{DynamicResource ShowWalletAddress}"
									Background="Transparent" BorderThickness="0"
									Command="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.ShowDualCoinWallet}"
									HorizontalAlignment="Left">
									<Path
										Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.IsDualCoinHideWallet, Converter={StaticResource BoolToVisibilityConverter}}"
										Width="16"
										Height="8"
										Data="{StaticResource Icon_CloseEye}"
										Fill="{StaticResource IconFillColor}"
										Stretch="Fill" />
								</controls:KbButton>
								<controls:KbButton 
									Padding="2"
									ToolTip="{DynamicResource HideWalletAddress}"
									Background="Transparent" BorderThickness="0"
									Command="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.HideDualCoinWallet}"
									HorizontalAlignment="Left">
									<Path
										Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.IsDualCoinShowWallet, Converter={StaticResource BoolToVisibilityConverter}}"
										Width="16"
										Height="12"
										Data="{StaticResource Icon_OpenEye}"
										Fill="{StaticResource IconFillColor}"
										Stretch="Fill" />
								</controls:KbButton>
                                <controls:KbButton
                                    Margin="4 0 0 0"
									Padding="2" 
									Visibility="{Binding ElementName=CbDualCoinWallet, Path=SelectedItem, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
									ToolTip="{DynamicResource CopyWalletAddress}"
									Background="Transparent" BorderThickness="0"
									Command="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.CopyDualCoinWallet}"
									HorizontalAlignment="Left">
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_Copy}"
										Fill="{StaticResource IconFillColor}"
										Stretch="Fill" />
								</controls:KbButton>
							</WrapPanel>
							<Border 
								Background="White"
								Width="308" 
                                Height="18" 
                                Margin="60 -20 0 0" 
                                Padding="3 0 0 0" 
                                VerticalAlignment="Center"
								Visibility="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.SelectedDualCoin.CoinProfile.IsDualCoinHideWallet, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock FontSize="18">*************************************</TextBlock>
							</Border>
						</WrapPanel>
					</StackPanel>
				</WrapPanel>

                <WrapPanel Margin="0 3" VerticalAlignment="Center">
                    <TextBlock
                        Style="{StaticResource LblTb}"
                        ToolTip="{DynamicResource CustomArgs}"
						Text="{DynamicResource CustomArgs}" />
                    <TextBox 
                        Height="26"
						Width="330"
                        VerticalContentAlignment="Center"
                        Background="White"
						IsEnabled="{Binding MinerProfile.IsMining, Converter={StaticResource BooleanInvertConverter}}"
						VerticalScrollBarVisibility="Auto"
						Text="{Binding MinerProfile.CoinVm.CoinKernel.CoinKernelProfile.CustomArgs, Mode=TwoWay}">
                        <TextBox.ToolTip>
                            <TextBlock Foreground="Red" Width="300" TextWrapping="Wrap" Text="{DynamicResource CustomArgsTip}"></TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </WrapPanel>
            </StackPanel>
        </StackPanel>
        <controls:KbButton
            BorderThickness="0"
            Margin="200 12 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
            ToolTip="MinerProfileIndex translate"
            Background="Transparent"
            Command="{x:Static vm:AppStatic.ShowLangViewItems}"
            CommandParameter="MinerProfileIndex">
            <WrapPanel>
                <Path
                    Width="14"
                    Height="14"
                    Data="{StaticResource Icon_Translate}"
                    Fill="Red"
                    Stretch="Fill" />
            </WrapPanel>
        </controls:KbButton>
    </Grid>
</UserControl>
