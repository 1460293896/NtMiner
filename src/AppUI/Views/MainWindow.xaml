<metro:MetroWindow x:Class="NTMiner.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:notification="clr-namespace:NTMiner.Notifications.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views"
		xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		Title="开源矿工"
		Width="{Binding Width}"
		Height="{Binding Height}"
		MinHeight="480"
		MinWidth="800"
		UseNoneWindowStyle="True"
		BorderBrush="{StaticResource IconFillColor}"
		Background="{StaticResource ThemeBackground}"
		WindowStartupLocation="CenterScreen"
		MouseDown="MetroWindow_MouseDown"
		DataContext="{x:Static vm:MainWindowViewModel.Current}"
		TextOptions.TextFormattingMode="Display">
	<metro:MetroWindow.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/TabControlStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<Style x:Key="IconButtonBg" TargetType="Border">
				<Setter Property="Height" Value="32"></Setter>
				<Setter Property="Width" Value="32"></Setter>
				<Setter Property="CornerRadius" Value="16"></Setter>
				<Setter Property="Background" Value="#E4EFF5"></Setter>
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="#CCE1ED"></Setter>
					</Trigger>
				</Style.Triggers>
			</Style>
			<sys:String x:Key="NTMinerTitle">
				NTMinerTitle
			</sys:String>
			<sys:String x:Key="MinerName">
				MinerName
			</sys:String>
			<sys:String x:Key="MinerNameTip">
				MinerNameTip
			</sys:String>
			<sys:String x:Key="UseThisPcName">
				UseThisPcName
			</sys:String>
			<sys:String x:Key="NTMinerTitleToopTip">
				NTMinerTitleToopTip
			</sys:String>
			<sys:String x:Key="HStart">
				HStart
			</sys:String>
			<sys:String x:Key="HProperty">
				HProperty
			</sys:String>
			<sys:String x:Key="HSpeed">
				HSpeed
			</sys:String>
			<sys:String x:Key="HOption">
				HOption
			</sys:String>
			<sys:String x:Key="HOverClock">
				HOverClock
			</sys:String>
			<sys:String x:Key="BtnStartMine">
				BtnStartMine
			</sys:String>
			<sys:String x:Key="BtnMining">
				BtnMining
			</sys:String>
			<sys:String x:Key="BtnStopMine">
				BtnStopMine
			</sys:String>
			<sys:String x:Key="ChkIsAutoBoot">
				ChkIsAutoBoot
			</sys:String>
			<sys:String x:Key="ChkIsAutoStart">
				ChkIsAutoStart
			</sys:String>
		</ResourceDictionary>
	</metro:MetroWindow.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="*" MinHeight="450" />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<!--上标题栏-->
		<Grid>
			<WrapPanel VerticalAlignment="Center">
				<Image Width="18" Height="18" Source="/NTMinerWpf;component/Styles/Images/logo32.png"></Image>
				<controls:KbLinkButton
					ToolTip="{DynamicResource NTMinerTitleToopTip}"
					Command="{x:Static vm:AppStatic.OpenOfficialSite}"
					KbDisplayLine="False"
					KbSystemButtonHoverBackground="Transparent"
					Background="Transparent"
					Foreground="{StaticResource ThemeForeground}">
					<WrapPanel>
						<TextBlock
							Margin="0"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							FontSize="16"
							Text="{DynamicResource NTMinerTitle}" />
					</WrapPanel>
				</controls:KbLinkButton>
				<controls:KbButton
					Visibility="{x:Static vm:AppStatic.IsDebugModeVisible}"
					ToolTip="{x:Static local:MainWindow.ViewId}"
					Command="{x:Static vm:AppStatic.ShowLangViewItems}"
					CommandParameter="{x:Static local:MainWindow.ViewId}"
					Padding="8 0"
					Background="Transparent">
					<WrapPanel>
						<Path
							Width="14"
							Height="14"
							Data="{StaticResource Icon_Translate}"
							Fill="{StaticResource ThemeForeground}"
							Stretch="Fill" />
					</WrapPanel>
				</controls:KbButton>
				<controls:KbButton 
					Margin="4 0 0 0" Height="20" BorderThickness="0" 
					Content="点击以管理员身份运行"
					Foreground="White"
					Visibility="{Binding IsBtnRunAsAdministratorVisible}" 
					Background="Red"
					Command="{x:Static vm:AppStatic.RunAsAdministrator}">
				</controls:KbButton>
				<WrapPanel Margin="4 0 0 0">
					<WrapPanel Visibility="{x:Static vm:AppStatic.IsFreeClientVisible}">
						<TextBlock VerticalAlignment="Center" Foreground="{StaticResource ThemeForeground}" Margin="8 0 0 0">作业：</TextBlock>
						<TextBlock VerticalAlignment="Center" Foreground="{StaticResource ThemeForeground}" FontSize="14" Text="{Binding MinerProfile.MineWork.Name}" ToolTip="{Binding MinerProfile.MineWork.Description}"></TextBlock>
					</WrapPanel>
					<TextBlock 
						VerticalAlignment="Center" 
						FontSize="14" Text="(中控)" 
						Foreground="{StaticResource ThemeForeground}"
						ToolTip="受中控控制，本地不能编辑。"
						Visibility="{x:Static vm:AppStatic.IsWorkerClientVisible}"></TextBlock>
				</WrapPanel>
				<uc:OpenedWindows VerticalAlignment="Top" Margin="8 0 0 0">
				</uc:OpenedWindows>
			</WrapPanel>
			<WrapPanel HorizontalAlignment="Right">
				<WrapPanel Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top">
					<CheckBox 
						Visibility="{x:Static vm:AppStatic.IsDevModeVisible}"
						Content="DevConsole"
						VerticalAlignment="Center"
						Cursor="Hand"
						Foreground="{StaticResource ThemeForeground}"
						IsChecked="{Binding IsUseDevConsole}" />
					<controls:KbComboBox 
						Margin="4 0 0 0"
						Height="26"
						Background="{StaticResource ThemeBackground}"
						ItemsSource="{Binding LangVms.LangVms}"
						DisplayMemberPath="Name" 
						SelectedItem="{Binding LangVms.CurrentLangVm}">
					</controls:KbComboBox>
					<local:MainMenu>
					</local:MainMenu>
					<controls:KbSystemMinButton
						Height="30"
						KbSystemButtonSize="40" />
					<controls:KbSystemMaxButton
						Height="30"
						KbSystemButtonSize="40" />
					<controls:KbSystemCloseButton
						Height="30"
						KbSystemButtonSize="40" />
				</WrapPanel>
			</WrapPanel>
		</Grid>
		<!--上导航栏-->
		<Grid Grid.Row="1">
			<TabControl 
				Name="tab" BorderThickness="0"
				Margin="0" Style="{DynamicResource TabControlStyle}">
				<TabItem Margin="3 0 8 0" Header="{DynamicResource HStart}" Height="36" Style="{DynamicResource TabItemStyle}" 
					 TextOptions.TextFormattingMode="Display">
					<Grid Background="#EBF2F9">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="394"></ColumnDefinition>
							<ColumnDefinition Width="1"></ColumnDefinition>
							<ColumnDefinition Width="*"></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"></RowDefinition>
							<RowDefinition Height="Auto"></RowDefinition>
						</Grid.RowDefinitions>
						<Grid Grid.Column="0" Grid.Row="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"></RowDefinition>
								<RowDefinition Height="*"></RowDefinition>
							</Grid.RowDefinitions>
							<Border
								Grid.Column="0" Grid.Row="0" Padding="0 4 0 0">
								<StackPanel>
									<WrapPanel>
										<WrapPanel VerticalAlignment="Center" IsEnabled="{Binding StateBarVm.IsMining, Converter={StaticResource BoolInvertConverter}}">
											<TextBlock 
												FontSize="12"
												Foreground="{StaticResource LableColor}"
												Padding="0 0 4 0"
												Width="58"
												VerticalAlignment="Center"
												TextAlignment="Right"
												TextWrapping="Wrap"
												ToolTip="{DynamicResource MinerName}"
												Text="{DynamicResource MinerName}"></TextBlock>
											<TextBox 
												Height="30"
												Width="136" Background="White"
												Text="{Binding MinerProfile.MinerName, UpdateSourceTrigger=LostFocus}" 
												VerticalContentAlignment="Center">
												<TextBox.ToolTip>
													<StackPanel>
														<TextBlock Text="{DynamicResource MinerNameTip}"></TextBlock>
													</StackPanel>
												</TextBox.ToolTip>
											</TextBox>
											<controls:KbButton 
												BorderThickness="0"
												ToolTip="{DynamicResource UseThisPcName}"
												Command="{Binding UseThisPcName}"
												Background="Transparent"
												CornerRadius="2">
												<Path
													Width="16"
													Height="14"
													Data="{StaticResource Icon_WindowsOS}"
													Fill="{StaticResource IconFillColor}"
													Stretch="Fill" />
											</controls:KbButton>
										</WrapPanel>
										<StackPanel
											Margin="42 0 0 0"
											IsEnabled="{Binding MinerProfile.IsWorker,Converter={StaticResource BoolInvertConverter}}"
											VerticalAlignment="Bottom">
											<controls:KbCheckBox 								
												Content="{DynamicResource ChkIsAutoBoot}"
												IconColor="{StaticResource IconFillColor}"
												IsChecked="{Binding MinerProfile.IsAutoBoot}" />
											<controls:KbCheckBox
												Content="{DynamicResource ChkIsAutoStart}"
												IconColor="{StaticResource IconFillColor}"
												IsChecked="{Binding MinerProfile.IsAutoStart}" />
										</StackPanel>
									</WrapPanel>
									<uc:MinerProfileIndex IsEnabled="{Binding MinerProfile.IsWorker,Converter={StaticResource BoolInvertConverter}}" />
								</StackPanel>
							</Border>

							<WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
								<controls:KbButton 
									Width="134"
									Height="44"
									Command="{Binding StartMine}" 
									Visibility="{Binding StateBarVm.IsMining, Converter={StaticResource BoolToVisibilityInvertConverter}}" 
									Background="{StaticResource ThemeBackground}">
									<WrapPanel>
										<Path
											Width="16"
											Height="16"
											Data="{StaticResource Icon_Fan}"
											Fill="{StaticResource ThemeForeground}"
											Stretch="Fill" />
										<Label
											Padding="4 4 4 6"
											VerticalAlignment="Center"
											Foreground="{StaticResource ThemeForeground}"
											FontSize="16"
											Content="{DynamicResource BtnStartMine}" />
									</WrapPanel>
								</controls:KbButton>
								<Button                        
									Command="{Binding StopMine}" 
									Visibility="{Binding StateBarVm.IsMining, Converter={StaticResource BoolToVisibilityConverter}}">
									<Button.Template>
										<ControlTemplate>
											<Border 
												x:Name="Content"
												Width="134"
												Height="44"
												Background="Transparent"
												BorderThickness="1" 
												BorderBrush="{StaticResource LineColor}">
												<WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
													<Path
														x:Name="Icon"
														Width="16"
														Height="16"
														Data="{StaticResource Icon_Fan}"
														Fill="Black"
														Stretch="Fill">
														<Path.RenderTransform>
															<RotateTransform Angle="{Binding StateBarVm.LogoRotateTransformAngle}" CenterX="8" CenterY="8"></RotateTransform>
														</Path.RenderTransform>
													</Path>
													<Label
														Padding="4 4 4 6"
														x:Name="Text"
														VerticalAlignment="Center"
														Foreground="Black"
														FontSize="16"
														Content="{DynamicResource BtnMining}" />
												</WrapPanel>
											</Border>
											<ControlTemplate.Triggers>
												<Trigger Property="IsMouseOver" Value="True">
													<Setter TargetName="Content" Property="Background" Value="Red"></Setter>
													<Setter TargetName="Content" Property="BorderBrush" Value="Red"></Setter>
													<Setter TargetName="Icon" Property="Fill" Value="White"></Setter>
													<Setter TargetName="Text" Property="Foreground" Value="White"></Setter>
													<Setter TargetName="Text" Property="Content" Value="{DynamicResource BtnStopMine}"></Setter>
												</Trigger>
											</ControlTemplate.Triggers>
										</ControlTemplate>
									</Button.Template>
								</Button>
							</WrapPanel>
						</Grid>
						<Border
							Grid.Column="0" Grid.Row="0"
							Width="200"
							Height="200"
							Background="#55000000"
							HorizontalAlignment="Center" 
							VerticalAlignment="Center" 
							CornerRadius="100"
							Visibility="{Binding MinerProfile.IsWorker,Converter={StaticResource BoolToVisibilityConverter}}" Margin="97,115">
							<TextBlock 
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Foreground="{StaticResource IconFillColor}" 
								FontSize="30" 
								Text="由中控管理"></TextBlock>
						</Border>

						<StackPanel Grid.Column="1" Background="{StaticResource LineColor}"></StackPanel>

						<TabControl
							Grid.Column="2" Grid.Row="0" 
							Margin="0 -24 0 0" 
							Padding="0"
							BorderThickness="0" Grid.ColumnSpan="2">
							<TabItem>
								<TabItem.Header>
									<Border Padding="2 0">
										<WrapPanel>
											<TextBlock Text="{Binding MinerProfile.CoinVm.CoinKernel.Kernel.FullName}"></TextBlock>
										</WrapPanel>
									</Border>
								</TabItem.Header>
								<uc:Console>
								</uc:Console>
							</TabItem>
							<TabItem>
								<TabItem.Header>
									<Border Padding="2 0">
										<WrapPanel>
											<TextBlock Text="{DynamicResource HSpeed}"></TextBlock>
										</WrapPanel>
									</Border>
								</TabItem.Header>
								<uc:SpeedTable>
								</uc:SpeedTable>
							</TabItem>
							<TabItem Visibility="{Binding IsOverClockVisible}">
								<TabItem.Header>
									<Border Padding="2 0">
										<WrapPanel>
											<TextBlock Text="{Binding MinerProfile.CoinVm.Code}"></TextBlock>
											<TextBlock Text="{DynamicResource HOverClock}"></TextBlock>
											<CheckBox 
												Margin="4 0 0 0" 
												ToolTip="开始挖矿时自动应用超频" 
												IsChecked="{Binding MinerProfile.CoinVm.CoinProfile.IsOverClockEnabled}"></CheckBox>
										</WrapPanel>
									</Border>
								</TabItem.Header>
								<uc:GpusOverClock Margin="4 0 0 0">
								</uc:GpusOverClock>
							</TabItem>
							<TabItem>
								<TabItem.Header>
									<Border Padding="2 0">
										<WrapPanel>
											<TextBlock Text="{DynamicResource HOption}"></TextBlock>
										</WrapPanel>
									</Border>
								</TabItem.Header>
								<uc:MinerProfileOption>
								</uc:MinerProfileOption>
							</TabItem>
						</TabControl>

						<!--下状态栏-->
						<uc:StateBar Grid.Row="1" Grid.ColumnSpan="3" Background="#EBF2F9" BorderBrush="{StaticResource LineColor}" BorderThickness="0 1 0 0">
						</uc:StateBar>
					</Grid>
				</TabItem>
				<TabItem Header="{DynamicResource HProperty}" Style="{DynamicResource TabItemStyle}">
					<Border BorderThickness="0" BorderBrush="{StaticResource LineColor}" Padding="14 0 0 0" Background="White">
						<uc:OuterProperty />
					</Border>
				</TabItem>
			</TabControl>
			<WrapPanel x:Name="IconButtons" Margin="0 0 8 0" VerticalAlignment="Top" HorizontalAlignment="Right">
				<Border Style="{StaticResource IconButtonBg}" Margin="8 0 0 0">
					<controls:KbButton 
						ToolTip="算力图"
						Background="Transparent" BorderThickness="0"
						Command="{x:Static vm:AppStatic.ShowSpeedChart}">
						<WrapPanel>
							<Path 
								Height="18"
								Width="18"
								Data="{StaticResource Icon_Speed}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
						</WrapPanel>
					</controls:KbButton>
				</Border>
				<Border Style="{StaticResource IconButtonBg}" Margin="8 0 0 0">
					<controls:KbButton 
						ToolTip="内核"
						Background="Transparent" BorderThickness="0"
						Command="{x:Static vm:AppStatic.ShowKernels}">
						<WrapPanel>
							<Path 
								Height="18"
								Width="18"
								Data="{StaticResource Icon_Logo}"
								Fill="{StaticResource IconFillColor}"
								Stretch="Fill" />
						</WrapPanel>
					</controls:KbButton>
				</Border>
			</WrapPanel>
		</Grid>

		<Grid Grid.Row="2" Background="Black" Height="320" Visibility="{x:Static vm:AppStatic.IsDevModeVisible}">
			<RichTextBox 
				FontFamily="Courier New"
				Background="Transparent"
				VerticalScrollBarVisibility="Auto"
				x:Name="RichTextBoxDebug" BorderThickness="0" 
				IsReadOnly="True"
				Padding="0 0 0 4" Foreground="White">
				<FlowDocument>
					<Paragraph x:Name="ConsoleParagraphDebug">
					</Paragraph>
				</FlowDocument>
			</RichTextBox>
			<WrapPanel
				Margin="0 0 18 0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top">
				<TextBlock 
					Visibility="{Binding IsDaemonRunning, Converter={StaticResource BoolToVisibilityConverter}}"
					Margin="0 0 20 0"
					ToolTip="ServerJsonVersion"
					Text="{Binding ServerJsonVersion}" 
					Foreground="White"
					Background="Black"></TextBlock>
				<controls:KbCheckBox 
					x:Name="ChkbIsConsoleAutoScrollToEnd"
					ToolTip="滚屏"
					IconColor="{StaticResource IconFillColor}"
					IsChecked="True" />
			</WrapPanel>
			<TextBlock 
				Visibility="{Binding IsDaemonRunning, Converter={StaticResource BoolToVisibilityConverter}}"
				Margin="0 0 18 0"
				HorizontalAlignment="Right" 
				VerticalAlignment="Bottom" 
				Text="守护进程运行中" 
				Foreground="Green"
				Background="Black"></TextBlock>
			<TextBlock 
				Visibility="{Binding IsDaemonRunning, Converter={StaticResource BoolToVisibilityInvertConverter}}"
				Margin="0 0 18 0"
				HorizontalAlignment="Right" 
				VerticalAlignment="Bottom" 
				Text="守护进程未运行" 
				Foreground="Red"
				Background="Black"></TextBlock>
		</Grid>

		<notification:NotificationMessageContainer 
			Margin="0 4 0 0"
			Grid.RowSpan="3"
			MaxWidth="500" 
			HorizontalAlignment="Center" 
			Manager="{Binding Manager}" />
	</Grid>
</metro:MetroWindow>
