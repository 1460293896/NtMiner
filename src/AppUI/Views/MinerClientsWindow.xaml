<metro:MetroWindow x:Class="NTMiner.Views.MinerClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:notification="clr-namespace:NTMiner.Notifications.Controls;assembly=NTMinerWpf"
        xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
        xmlns:local="clr-namespace:NTMiner.Views"
        xmlns:view="clr-namespace:NTMiner.Views"
        xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
        xmlns:vm="clr-namespace:NTMiner.Vms"
        UseNoneWindowStyle="True"
        BorderBrush="{StaticResource IconFillColor}"
        Background="{StaticResource ThemeBackground}"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MouseDown="MetroWindow_MouseDown"
        DataContext="{x:Static vm:MinerClientsWindowViewModel.Current}"
        mc:Ignorable="d" d:DesignHeight="1000" d:DesignWidth="3600">
    <metro:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AppUI;component/Styles/KbWallet.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <sys:String x:Key="WindowTitle">
                矿工
            </sys:String>
            <Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
                <Setter Property="Foreground" Value="{StaticResource ThemeForeground}"></Setter>
            </Style>
        </ResourceDictionary>
    </metro:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="550"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--上标题栏-->
        <StackPanel Margin="0 0 220 0">
            <WrapPanel Margin="0 6 0 0" IsEnabled="{Binding IsMineWorkSelected, Converter={StaticResource BoolInvertConverter}}">
                <TextBlock Style="{StaticResource LblTb}" Text="主币" />
                <controls:KbComboBox 
                    Margin="0 0 20 0"
                    Width="100"
                    ItemsSource="{Binding MineCoinVms.PleaseSelect}"
                    DisplayMemberPath="Code"
                    SelectedItem="{Binding MainCoin}">
                    <controls:KbComboBox.Toolbar>
                        <WrapPanel HorizontalAlignment="Right">
                            <controls:KbButton
                                Margin="4 2"
                                BorderThickness="0"
                                Height="24"
                                Padding="4 0"
                                Command="{x:Static vm:AppStatic.ShowCoins}"
                                CommandParameter="{Binding MainCoin}"
                                Background="{StaticResource ThemeBackground}"
                                CornerRadius="2">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource Icon_Coin}"
                                        Fill="{StaticResource ThemeForeground}"
                                        Stretch="Fill" />
                                    <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </controls:KbComboBox.Toolbar>
                    <controls:KbComboBox.ContextMenuEx>
                        <ContextMenu>
                            <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ShowCoins}" CommandParameter="{Binding MainCoin}">
                            </MenuItem>
                        </ContextMenu>
                    </controls:KbComboBox.ContextMenuEx>
                </controls:KbComboBox>
                <WrapPanel Margin="0 0 20 0">
                    <TextBlock Style="{StaticResource LblTb}" Text="主币矿池" />
                    <controls:KbComboBox 
                        Width="120"
                        ItemsSource="{Binding MainCoin.OptionPools}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Server"
                        SelectedItem="{Binding MainCoinPool}">
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Command="{x:Static vm:AppStatic.ManagePools}"
                                    CommandParameter="{Binding MainCoin}"
                                    Background="{StaticResource ThemeBackground}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Pool}"
                                            Fill="{StaticResource ThemeForeground}"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                        <controls:KbComboBox.ContextMenuEx>
                            <ContextMenu>
                                <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManagePools}" CommandParameter="{Binding MainCoin}">
                                </MenuItem>
                            </ContextMenu>
                        </controls:KbComboBox.ContextMenuEx>
                    </controls:KbComboBox>
                </WrapPanel>
                <WrapPanel Margin="0 0 40 0">
                    <TextBlock Style="{StaticResource LblTb}" Text="主币钱包" />
                    <TextBox VerticalContentAlignment="Center" Text="{Binding MainCoinWallet}" Width="160" Background="White"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Style="{StaticResource LblTb}" Text="双挖币" />
                    <controls:KbComboBox 
                        Margin="0 0 20 0"
                        Width="100"
                        ItemsSource="{Binding MineCoinVms.DualPleaseSelect}"
                        DisplayMemberPath="Code"
                        SelectedItem="{Binding DualCoin}">
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Command="{x:Static vm:AppStatic.ShowCoins}"
                                    CommandParameter="{Binding DualCoin}"
                                    Background="{StaticResource ThemeBackground}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Coin}"
                                            Fill="{StaticResource ThemeForeground}"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                        <controls:KbComboBox.ContextMenuEx>
                            <ContextMenu>
                                <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ShowCoins}" CommandParameter="{Binding DualCoin}">
                                </MenuItem>
                            </ContextMenu>
                        </controls:KbComboBox.ContextMenuEx>
                    </controls:KbComboBox>
                    <WrapPanel Margin="0 0 20 0">
                        <TextBlock Style="{StaticResource LblTb}" Text="双挖币矿池" />
                        <controls:KbComboBox 
                            Width="120"
                            ItemsSource="{Binding DualCoin.OptionPools}"
                            DisplayMemberPath="Name"
                            SelectedValuePath="Server"
                            SelectedItem="{Binding DualCoinPool}">
                            <controls:KbComboBox.Toolbar>
                                <WrapPanel HorizontalAlignment="Right">
                                    <controls:KbButton
                                        Margin="4 2"
                                        BorderThickness="0"
                                        Height="24"
                                        Padding="4 0"
                                        Command="{x:Static vm:AppStatic.ManagePools}"
                                        CommandParameter="{Binding DualCoin}"
                                        Background="{StaticResource ThemeBackground}"
                                        CornerRadius="2">
                                        <WrapPanel>
                                            <Path
                                                Width="14"
                                                Height="14"
                                                Data="{StaticResource Icon_Pool}"
                                                Fill="{StaticResource ThemeForeground}"
                                                Stretch="Fill" />
                                            <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                        </WrapPanel>
                                    </controls:KbButton>
                                </WrapPanel>
                            </controls:KbComboBox.Toolbar>
                            <controls:KbComboBox.ContextMenuEx>
                                <ContextMenu>
                                    <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManagePools}" CommandParameter="{Binding DualCoin}">
                                    </MenuItem>
                                </ContextMenu>
                            </controls:KbComboBox.ContextMenuEx>
                        </controls:KbComboBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Style="{StaticResource LblTb}" Text="双挖币钱包" />
                        <TextBox VerticalContentAlignment="Center" Text="{Binding DualCoinWallet}" Width="160" Background="White"></TextBox>
                    </WrapPanel>
                </WrapPanel>
            </WrapPanel>
            <WrapPanel Margin="0 2 0 0">
                <TextBlock Style="{StaticResource LblTb}" Text="分组" />
                <controls:KbComboBox 
                    Margin="0 0 20 0"
                    Width="100"
                    ItemsSource="{Binding MinerGroupVmItems}"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding SelectedMinerGroup}">
                    <controls:KbComboBox.Toolbar>
                        <WrapPanel HorizontalAlignment="Right">
                            <controls:KbButton
                                Margin="4 2"
                                BorderThickness="0"
                                Height="24"
                                Padding="4 0"
                                Command="{x:Static vm:AppStatic.ManageMinerGroup}"
                                Background="{StaticResource ThemeBackground}"
                                CornerRadius="2">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource Icon_MinerGroup}"
                                        Fill="{StaticResource ThemeForeground}"
                                        Stretch="Fill" />
                                    <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </controls:KbComboBox.Toolbar>
                    <controls:KbComboBox.ContextMenuEx>
                        <ContextMenu>
                            <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManageMinerGroup}">
                            </MenuItem>
                        </ContextMenu>
                    </controls:KbComboBox.ContextMenuEx>
                </controls:KbComboBox>
                <TextBlock Style="{StaticResource LblTb}" Text="作业" />
                <controls:KbComboBox 
                    Margin="0 0 36 0"
                    Width="120"
                    ItemsSource="{Binding MineWorkVms.MineWorkVmItems}"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding SelectedMineWork}">
                    <controls:KbComboBox.Toolbar>
                        <WrapPanel HorizontalAlignment="Right">
                            <controls:KbButton
                                Margin="4 2"
                                BorderThickness="0"
                                Height="24"
                                Padding="4 0"
                                Command="{x:Static vm:AppStatic.ManageMineWork}"
                                Background="{StaticResource ThemeBackground}"
                                CornerRadius="2">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource Icon_MineWork}"
                                        Fill="{StaticResource ThemeForeground}"
                                        Stretch="Fill" />
                                    <TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </controls:KbComboBox.Toolbar>
                    <controls:KbComboBox.ContextMenuEx>
                        <ContextMenu>
                            <MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManageMineWork}">
                            </MenuItem>
                        </ContextMenu>
                    </controls:KbComboBox.ContextMenuEx>
                </controls:KbComboBox>
                <WrapPanel Margin="0 0 10 0">
                    <TextBlock Style="{StaticResource LblTb}">IP</TextBlock>
                    <TextBox VerticalContentAlignment="Center" Width="100" Text="{Binding MinerIp, ValidatesOnExceptions=True}" Background="White"></TextBox>
                    <TextBlock Style="{StaticResource LblTb}" Margin="8 0 0 0">矿工名</TextBlock>
                    <TextBox VerticalContentAlignment="Center" Width="100" Text="{Binding MinerName}" Background="White"></TextBox>
                    <TextBlock Style="{StaticResource LblTb}" Margin="8 0 0 0">内核</TextBlock>
                    <TextBox VerticalContentAlignment="Center" ToolTip="内核名以次开头的内核" Width="100" Text="{Binding Kernel}" Background="White"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Style="{StaticResource LblTb}">客户端版本</TextBlock>
                    <TextBox VerticalContentAlignment="Center" ToolTip="客户端版本号以此开头的客户端" Width="100" Text="{Binding Version}" Background="White"></TextBox>
                    <TextBlock Style="{StaticResource LblTb}" Margin="8 0 0 0">状态</TextBlock>
                    <controls:KbComboBox 
                        Width="84"
                        ItemsSource="{Binding MineStatusEnumItems}"
                        DisplayMemberPath="Description"
                        SelectedItem="{Binding MineStatusEnumItem}">
                    </controls:KbComboBox>
                </WrapPanel>
            </WrapPanel>
        </StackPanel>
        <WrapPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <controls:KbButton 
                Margin="10 0 0 0"
                ToolTip="算力图"
                Command="{x:Static vm:AppStatic.ShowChartsWindow}" Background="Transparent" BorderThickness="0"
                CornerRadius="2">
                <Image Width="18" Height="18" Source="/NTMinerWpf;component/Styles/Images/cc32.png">
                </Image>
            </controls:KbButton>
            <local:MainMenu>
            </local:MainMenu>
            <controls:KbSystemMinButton
                    Height="30"
                    KbSystemButtonSize="40" />
            <controls:KbSystemMaxButton
                    Height="30"
                    KbSystemButtonSize="40" />
            <controls:KbSystemCloseButton
                    Height="30"
                    KbSystemButtonSize="40" />
        </WrapPanel>
        <DataGrid 
            Grid.Row="1"
            Margin="0 2 0 0"
            BorderThickness="0"
            IsReadOnly="False"
            SelectionMode="Extended"
            SelectionChanged="MinerClientsGrid_OnSelectionChanged"
            ColumnHeaderHeight="40"
            HeadersVisibility="All"
            FrozenColumnCount="{Binding FrozenColumnCount}"
            ItemsSource="{Binding MinerClients}"
            SelectedItem="{Binding CurrentMinerClient}"
            CanUserResizeRows="True"
            AutoGenerateColumns="False">
            <DataGrid.Resources>
                <vm:BindingProxy x:Key="proxy" Data="{Binding}" />
            </DataGrid.Resources>
            <DataGrid.RowHeaderStyle>
                <Style TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Content">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource AutoNumberValueConverter}">
                                <Binding />
                                <Binding Path="Items" RelativeSource="{RelativeSource AncestorType={x:Type DataGrid}}" />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowHeaderStyle>
            <DataGrid.Columns>
                <!--操作-->
                <DataGridTemplateColumn Width="110" CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
                    <DataGridTemplateColumn.Header>
                        <StackPanel>
                            <WrapPanel>
                                <TextBlock>操作</TextBlock>
                                <Menu 
                                    Margin="4 0 0 0"
                                    Background="Transparent" 
                                    Width="24" Height="16" 
                                    Padding="0">
                                    <MenuItem>
                                        <MenuItem.Icon>
                                            <Path
                                                Width="14"
                                                Height="8"
                                                Data="{StaticResource Icon_Menu}"
                                                Fill="{StaticResource IconFillColor}"
                                                Stretch="Fill" />
                                        </MenuItem.Icon>
                                        <MenuItem Header="重启客户端" Command="{Binding Data.RestartNTMiner,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Restart}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="开始挖矿" Command="{Binding Data.StartMine,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Start}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="停止挖矿" Command="{Binding Data.StopMine,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Stop}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="重启电脑" Command="{Binding Data.RestartWindows,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Restart2}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="关闭电脑" Command="{Binding Data.ShutdownWindows,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Shutdown}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="删除矿工" Command="{Binding Data.RemoveMinerClients,Source={StaticResource proxy}}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Delete}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>
                                <controls:KbButton  
                                    Command="{Binding Data.AddMinerClient, Source={StaticResource proxy}}" 
                                    Background="Transparent" BorderThickness="0"
                                    Margin="2 0"
                                    CornerRadius="2" ToolTip="添加">
                                    <WrapPanel>
                                        <Path
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource Icon_Add}"
                                        Fill="{StaticResource IconFillColor}"
                                        Stretch="Fill" />
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </StackPanel>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <Button 
                                    Command="{Binding StartMine}" 
                                    Visibility="{Binding IsMining, Converter={StaticResource BoolToVisibilityInvertConverter}}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border
                                                x:Name="Content"
                                                Padding="4 2"
                                                Height="20"
                                                Background="Red"
                                                BorderThickness="0">
                                                <WrapPanel>
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="{StaticResource Icon_Mining1}"
                                                        Fill="White"
                                                        Stretch="Fill">
                                                    </Path>
                                                    <Label
                                                        x:Name="Text"
                                                        Padding="2 0 0 0"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Content="未在挖矿" />
                                                </WrapPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Content" Property="Background" Value="Green"></Setter>
                                                    <Setter TargetName="Content" Property="BorderBrush" Value="Green"></Setter>
                                                    <Setter TargetName="Text" Property="Content" Value="开始挖矿"></Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button
                                    Command="{Binding StopMine}" 
                                    Visibility="{Binding IsMining, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border 
                                                x:Name="Content"
                                                Padding="4 2"
                                                Height="20"
                                                Background="Green"
                                                BorderThickness="0">
                                                <WrapPanel>
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Visibility="{Binding IsShovelEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        Data="{StaticResource Icon_Mining2}"
                                                        Fill="White"
                                                        Stretch="Fill">
                                                        <Path.RenderTransform>
                                                            <RotateTransform Angle="-20" CenterX="7" CenterY="7"></RotateTransform>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Visibility="{Binding IsShovelEmpty, Converter={StaticResource BoolToVisibilityInvertConverter}}"
                                                        Data="{StaticResource Icon_Mining1}"
                                                        Fill="White"
                                                        Stretch="Fill">
                                                        <Path.RenderTransform>
                                                            <RotateTransform Angle="20" CenterX="7" CenterY="7"></RotateTransform>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                    <Label
                                                        x:Name="Text"
                                                        Padding="2 0 0 0"
                                                        VerticalAlignment="Center"
                                                        Foreground="White"
                                                        Content="正在挖矿" />
                                                </WrapPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Content" Property="Background" Value="Red"></Setter>
                                                    <Setter TargetName="Content" Property="BorderBrush" Value="Red"></Setter>
                                                    <Setter TargetName="Text" Property="Content" Value="停止挖矿"></Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Menu 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="24"
                                    Height="20"
                                    Padding="0">
                                    <MenuItem>
                                        <MenuItem.Icon>
                                            <Path
                                                Width="14"
                                                Height="8"
                                                Data="{StaticResource Icon_Menu}"
                                                Fill="{StaticResource IconFillColor}"
                                                Stretch="Fill" />
                                        </MenuItem.Icon>
                                        <MenuItem Header="重启客户端" Command="{Binding RestartNTMiner}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Restart}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="重启电脑" Command="{Binding RestartWindows}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Restart2}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="关闭电脑" Command="{Binding ShutdownWindows}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Shutdown}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="删除矿工" Command="{Binding Remove}">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource Icon_Delete}"
                                                    Fill="{StaticResource IconFillColor}"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--LastActivedOnText-->
                <DataGridTemplateColumn 
                    Visibility="{Binding Data.ColumnsShow.LastActivedOnText,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
                    CanUserResize="True" 
                    CanUserReorder="False" 
                    CanUserSort="False" 
                    IsReadOnly="True">
                    <DataGridTemplateColumn.Header>
                        <StackPanel>
                            <WrapPanel>
                                <TextBlock Text="最后更新"></TextBlock>
                                <controls:KbButton
                                    ToolTip="不展示"
                                    Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
                                    CommandParameter="LastActivedOnText"
                                    Background="Transparent">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="8"
                                            Data="{StaticResource Icon_Hide}"
                                            Fill="#FF5A5A5A"
                                            Stretch="Fill" />
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                            <WrapPanel>
                                <TextBlock Text="{Binding Data.CountDown,Source={StaticResource proxy}}"></TextBlock>
                                <TextBlock Text=" 秒后刷新"></TextBlock>
                            </WrapPanel>
                        </StackPanel>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding LastActivedOnText}" Margin="4 0 0 0"></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--BootTimeSpanText-->
                <DataGridTextColumn 
                    Binding="{Binding BootTimeSpanText}"
                    Visibility="{Binding Data.ColumnsShow.BootTimeSpanText,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
                    CanUserResize="True" CanUserReorder="False" CanUserSort="False" IsReadOnly="True">
                    <DataGridTextColumn.Header>
                        <WrapPanel>
                            <TextBlock>运行时长</TextBlock>
                            <controls:KbButton
                                ToolTip="不展示"
                                Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
                                CommandParameter="BootTimeSpanText"
                                Background="Transparent">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="8"
                                        Data="{StaticResource Icon_Hide}"
                                        Fill="#FF5A5A5A"
                                        Stretch="Fill" />
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </DataGridTextColumn.Header>
