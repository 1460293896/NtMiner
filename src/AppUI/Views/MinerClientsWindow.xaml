							<WrapPanel.ContextMenu>
								<ContextMenu>
									<MenuItem Header="不展示" Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" CommandParameter="GpuType">
									</MenuItem>
								</ContextMenu>
							</WrapPanel.ContextMenu>
						</WrapPanel>
					</DataGridTemplateColumn.Header>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<WrapPanel>
								<Path
									Margin="4 0 0 0"
									Width="18"
									Height="14"
									ToolTip="NVIDIA"
									Visibility="{Binding IsNvidiaIconVisible}"
									Data="{StaticResource Icon_Nvidia}"
									Fill="Green"
									Stretch="Fill" />
								<Path
									Margin="4 0 0 0"
									Width="16"
									Height="14"
									ToolTip="AMD"
									Visibility="{Binding IsAMDIconVisible}"
									Data="{StaticResource Icon_AMD}"
									Fill="Red"
									Stretch="Fill" />
							</WrapPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<!--GpuDriver-->
				<DataGridTemplateColumn 
					Visibility="{Binding Data.ColumnsShow.GpuDriver,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
					CanUserResize="True" 
					CanUserReorder="False" 
					CanUserSort="False" 
					IsReadOnly="True">
					<DataGridTemplateColumn.Header>
						<WrapPanel>
							<TextBlock>显卡驱动</TextBlock>
							<WrapPanel.ContextMenu>
								<ContextMenu>
									<MenuItem Header="不展示" Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" CommandParameter="GpuDriver">
									</MenuItem>
								</ContextMenu>
							</WrapPanel.ContextMenu>
						</WrapPanel>
					</DataGridTemplateColumn.Header>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<WrapPanel>
								<TextBox 
									BorderThickness="0"
									Background="Transparent"
									IsReadOnly="True"
									Text="{Binding GpuDriver, Mode=OneWay}"></TextBox>
							</WrapPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<!--GpuInfo-->
				<DataGridTemplateColumn 
					Visibility="{Binding Data.ColumnsShow.GpuInfo,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
					CanUserResize="True" 
					CanUserReorder="False" 
					CanUserSort="False" 
					IsReadOnly="True">
					<DataGridTemplateColumn.Header>
						<WrapPanel>
							<TextBlock>显卡</TextBlock>
							<WrapPanel.ContextMenu>
								<ContextMenu>
									<MenuItem Header="不展示" Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" CommandParameter="GpuInfo">
									</MenuItem>
								</ContextMenu>
							</WrapPanel.ContextMenu>
						</WrapPanel>
					</DataGridTemplateColumn.Header>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<WrapPanel>
								<TextBox 
									BorderThickness="0"
									Background="Transparent"
									IsReadOnly="True"
									ToolTip="{Binding GpuInfo}"
									Text="{Binding GpuInfo, Mode=OneWay}"></TextBox>
							</WrapPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		<TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding MinerClients, Converter={StaticResource NoRecordVisibilityConverter}}" Foreground="Red" Text="没有记录"></TextBlock>
		<notification:NotificationMessageContainer 
			Margin="0 4 0 0"
			Grid.Row="0"
			Grid.RowSpan="3"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			MaxWidth="500"
			Manager="{Binding Manager}" />
	</Grid>
</metro:MetroWindow>
