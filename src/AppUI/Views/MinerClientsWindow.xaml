<metro:MetroWindow x:Class="NTMiner.Views.MinerClientsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:notification="clr-namespace:NTMiner.Notifications.Controls;assembly=NTMinerWpf"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views"
		xmlns:view="clr-namespace:NTMiner.Views"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		UseNoneWindowStyle="True"
		BorderBrush="{StaticResource IconFillColor}"
		Background="{StaticResource ThemeBackground}"
		Foreground="{StaticResource ThemeForeground}"
		WindowState="Maximized"
		WindowStartupLocation="CenterScreen"
		MouseDown="MetroWindow_MouseDown"
		DataContext="{x:Static vm:MinerClientsWindowViewModel.Current}"
		mc:Ignorable="d" d:DesignHeight="750" d:DesignWidth="3000">
	<metro:MetroWindow.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/AppUI;component/Styles/KbWallet.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<sys:String x:Key="WindowTitle">
				矿工
			</sys:String>
			<Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
				<Setter Property="Foreground" Value="{StaticResource ThemeForeground}"></Setter>
			</Style>
		</ResourceDictionary>
	</metro:MetroWindow.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<!--上标题栏-->
		<Grid Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<WrapPanel Grid.Column="0" Margin="4 7 0 4" VerticalAlignment="Top">
				<Path
					Width="18"
					Height="18"
					Data="{StaticResource Icon_Miner}"
					Fill="{StaticResource ThemeForeground}"
					Stretch="Fill" />
				<TextBlock
					Margin="4 0 0 0"
					FontSize="14"
					Text="矿工">
				</TextBlock>
			</WrapPanel>
			<WrapPanel Grid.Column="1" Margin="4" VerticalAlignment="Top">
				<Button Command="{Binding PageFirst}" IsEnabled="{Binding IsPageUpEnabled}">首页</Button>
				<Button
					Width="20" Margin="4 0 0 0"
					Command="{Binding PageUp}" 
					IsEnabled="{Binding IsPageUpEnabled}" 
					Content="&lt;"
					ToolTip="上一页">
				</Button>
				<Button
					Width="20" Margin="4 0 0 0"
					Command="{Binding PageDown}" 
					IsEnabled="{Binding IsPageDownEnabled}" 
					Content="&gt;"
					ToolTip="下一页">
				</Button>
				<Button
					Width="20" Margin="4 0 0 0"
					Command="{Binding PageRefresh}" 
					ToolTip="手动刷新">
					<Path 
						Width="14"
						Height="14"
						Stretch="Fill"
						Fill="{StaticResource IconFillColor}"
						Data="{StaticResource Icon_Refresh}"></Path>
				</Button>
				<Button Command="{Binding PageLast}" IsEnabled="{Binding IsPageDownEnabled}" Margin="4 0 0 0">尾页</Button>
				<Label Foreground="{StaticResource ThemeForeground}">第</Label>
				<TextBox Foreground="{StaticResource ThemeForeground}" VerticalContentAlignment="Center" Text="{Binding MinerClientPageIndex}"></TextBox>
				<Label Foreground="{StaticResource ThemeForeground}">/</Label>
				<TextBlock Foreground="{StaticResource ThemeForeground}" VerticalAlignment="Center" Text="{Binding MinerClientPageCount}"></TextBlock>
				<Label Foreground="{StaticResource ThemeForeground}">页，每页</Label>
				<controls:KbComboBox ItemsSource="{Binding PageSizeItems}" SelectedItem="{Binding MinerClientPageSize}">
				</controls:KbComboBox>
				<Label Foreground="{StaticResource ThemeForeground}">条，共</Label>
				<TextBlock Foreground="{StaticResource ThemeForeground}" VerticalAlignment="Center" Text="{Binding MinerClientTotal}"></TextBlock>
				<Label Foreground="{StaticResource ThemeForeground}">条</Label>

				<Label HorizontalContentAlignment="Right" Foreground="{StaticResource ThemeForeground}">列显</Label>
				<controls:KbComboBox 
					ItemsSource="{Binding ColumnsShows.List}"
					DisplayMemberPath="ColumnsShowName"
					SelectedItem="{Binding ColumnsShow}">
				</controls:KbComboBox>
				<controls:KbButton
					ToolTip="添加列显"
					Command="{Binding ColumnsShows.Add}" 
					Background="Transparent" 
					Foreground="{StaticResource ThemeForeground}"
					BorderThickness="0"
					Margin="2 0"
					CornerRadius="2">
					<WrapPanel>
						<Path
							Width="18"
							Height="18"
							Data="{StaticResource Icon_Add}"
							Fill="{StaticResource ThemeForeground}"
							Stretch="Fill" />
					</WrapPanel>
				</controls:KbButton>
				<controls:KbButton
					ToolTip="删除列显"
					IsEnabled="{Binding ColumnsShow.IsPleaseSelect, Converter={StaticResource BoolInvertConverter}}"
					Command="{Binding ColumnsShow.Remove}" Background="Transparent" BorderThickness="0"
					Margin="2 0"
					CornerRadius="2">
					<WrapPanel>
						<Path
							Width="18"
							Height="18"
							Data="{StaticResource Icon_Delete}"
							Fill="{StaticResource ThemeForeground}"
							Stretch="Fill" />
					</WrapPanel>
				</controls:KbButton>
				<controls:KbButton 
					ToolTip="保存列显"
					Command="{Binding ColumnsShow.Save}" Background="Transparent" BorderThickness="0"
					Margin="2 0"
					CornerRadius="2">
					<WrapPanel>
						<Path
							Width="18"
							Height="18"
							Data="{StaticResource Icon_Ok}"
							Fill="{StaticResource ThemeForeground}"
							Stretch="Fill" />
					</WrapPanel>
				</controls:KbButton>
			</WrapPanel>
			<WrapPanel Grid.Column="2" Margin="4" VerticalAlignment="Center">
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.LastActivedOnText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.LastActivedOnText}" Margin="0 0 6 0">最后更新</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.BootTimeSpanText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.BootTimeSpanText}" Margin="0 0 6 0">运行时长</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MineTimeSpanText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MineTimeSpanText}" Margin="0 0 6 0">挖矿时长</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.Work, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Work}" Margin="0 0 6 0">作业</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MinerGroup, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerGroup}" Margin="0 0 6 0">分组</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MinerName, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerName}" Margin="0 0 6 0">矿工名</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MinerIp, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerIp}" Margin="0 0 6 0">IP</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.WindowsLoginNameAndPassword, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.WindowsLoginNameAndPassword}" Margin="0 0 6 0">远程桌面用户名密码</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MainCoinCode, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinCode}" Margin="0 0 6 0">主挖币种</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MainCoinSpeedText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinSpeedText}" Margin="0 0 6 0">主币算力</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MainCoinRejectPercentText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinRejectPercentText}" Margin="0 0 6 0">主币拒绝</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.DualCoinCode, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinCode}" Margin="0 0 6 0">双挖币种</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.DualCoinSpeedText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinSpeedText}" Margin="0 0 6 0">双挖币算力</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.DualCoinRejectPercentText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinRejectPercentText}" Margin="0 0 6 0">双挖币拒绝</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.IncomeMainCoinPerDayText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IncomeMainCoinPerDayText}" Margin="0 0 6 0">主币预期收益</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.IncomeDualCoinPerDayText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IncomeDualCoinPerDayText}" Margin="0 0 6 0">双挖币预期收益</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.GpuTableTrs, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuTableTrs}" Margin="0 0 6 0">显卡表格</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MainCoinWallet, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinWallet}" Margin="0 0 6 0">主币钱包</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.MainCoinPool, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinPool}" Margin="0 0 6 0">主币矿池</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.Kernel, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Kernel}" Margin="0 0 6 0">内核</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.DualCoinWallet, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinWallet}" Margin="0 0 6 0">双挖币钱包</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.DualCoinPool, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinPool}" Margin="0 0 6 0">双挖币矿池</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.Version, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Version}" Margin="0 0 6 0">客户端版本</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.OSName, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.OSName}" Margin="0 0 6 0">操作系统</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.OSVirtualMemoryGbText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.OSVirtualMemoryGbText}" Margin="0 0 6 0">虚拟内存</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.IsAutoBoot, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IsAutoBoot}" Margin="0 0 6 0">开机自动启动</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.IsAutoStart, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IsAutoStart}" Margin="0 0 6 0">启动后自动开始挖矿</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.GpuType, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuType}" Margin="0 0 6 0">显卡类型</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.GpuDriver, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuDriver}" Margin="0 0 6 0">显卡驱动</CheckBox>
				<CheckBox Foreground="{StaticResource ThemeForeground}" Visibility="{Binding ColumnsShow.GpuInfo, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuInfo}" Margin="0 0 6 0">显卡</CheckBox>
			</WrapPanel>
			<WrapPanel Grid.Column="3" VerticalAlignment="Top">
				<controls:KbButton 
					ToolTip="算力图"
					Command="{x:Static vm:AppStatic.ShowChartsWindow}" Background="Transparent" BorderThickness="0"
					Margin="2 0"
					CornerRadius="2">
					<Image Width="18" Height="18" Source="/NTMinerWpf;component/Styles/Images/cc32.png">
					</Image>
				</controls:KbButton>
				<local:MainMenu>
				</local:MainMenu>
				<controls:KbSystemMinButton
					Height="30"
					KbSystemButtonSize="40" />
				<controls:KbSystemMaxButton
					Height="30"
					KbSystemButtonSize="40" />
				<controls:KbSystemCloseButton
					Height="30"
					KbSystemButtonSize="40" />
			</WrapPanel>
		</Grid>
		<StackPanel Grid.Row="1">
			<StackPanel.Resources>
				<Style TargetType="TextBox">
					<Setter Property="Height" Value="20"></Setter>
				</Style>
				<Style TargetType="controls:KbComboBox">
					<Setter Property="Height" Value="20"></Setter>
				</Style>
				<Style TargetType="ComboBoxItem">
					<Setter Property="Height" Value="20"></Setter>
				</Style>
			</StackPanel.Resources>
			<WrapPanel IsEnabled="{Binding IsMineWorkSelected, Converter={StaticResource BoolInvertConverter}}">
				<TextBlock Style="{StaticResource LblTb}" Text="主币" />
				<controls:KbComboBox 
					Margin="0 0 20 0"
					Width="100"
					ItemsSource="{Binding MineCoinVms.PleaseSelect}"
					DisplayMemberPath="Code"
					SelectedItem="{Binding MainCoin}">
					<controls:KbComboBox.Toolbar>
						<WrapPanel HorizontalAlignment="Right">
							<controls:KbButton
								Margin="4 2"
								BorderThickness="0"
								Height="24"
								Padding="4 0"
								Command="{x:Static vm:AppStatic.ShowCoins}"
								CommandParameter="{Binding MainCoin}"
								Background="{StaticResource IconFillColor}"
								CornerRadius="2">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_Coin}"
										Fill="White"
										Stretch="Fill" />
									<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
								</WrapPanel>
							</controls:KbButton>
						</WrapPanel>
					</controls:KbComboBox.Toolbar>
					<controls:KbComboBox.ContextMenuEx>
						<ContextMenu>
							<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ShowCoins}" CommandParameter="{Binding MainCoin}">
							</MenuItem>
						</ContextMenu>
					</controls:KbComboBox.ContextMenuEx>
				</controls:KbComboBox>
				<WrapPanel Margin="0 0 20 0">
					<TextBlock Style="{StaticResource LblTb}" Text="主币矿池" />
					<controls:KbComboBox 
						Width="120"
						ItemsSource="{Binding MainCoin.OptionPools}"
						DisplayMemberPath="Name"
						SelectedValuePath="Server"
						SelectedItem="{Binding MainCoinPool}">
						<controls:KbComboBox.Toolbar>
							<WrapPanel HorizontalAlignment="Right">
								<controls:KbButton
									Margin="4 2"
									BorderThickness="0"
									Height="24"
									Padding="4 0"
									Command="{x:Static vm:AppStatic.ManagePools}"
									CommandParameter="{Binding MainCoin}"
									Background="{StaticResource IconFillColor}"
									CornerRadius="2">
									<WrapPanel>
										<Path
											Width="14"
											Height="14"
											Data="{StaticResource Icon_Pool}"
											Fill="White"
											Stretch="Fill" />
										<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
									</WrapPanel>
								</controls:KbButton>
							</WrapPanel>
						</controls:KbComboBox.Toolbar>
						<controls:KbComboBox.ContextMenuEx>
							<ContextMenu>
								<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManagePools}" CommandParameter="{Binding MainCoin}">
								</MenuItem>
							</ContextMenu>
						</controls:KbComboBox.ContextMenuEx>
					</controls:KbComboBox>
				</WrapPanel>
				<WrapPanel Margin="0 0 40 0">
					<TextBlock Style="{StaticResource LblTb}" Text="主币钱包" />
					<TextBox VerticalContentAlignment="Center" Text="{Binding MainCoinWallet}" Width="160" Background="White"></TextBox>
				</WrapPanel>
				<WrapPanel>
					<TextBlock Style="{StaticResource LblTb}" Text="双挖币" />
					<controls:KbComboBox 
						Margin="0 0 20 0"
						Width="100"
						ItemsSource="{Binding MineCoinVms.DualPleaseSelect}"
						DisplayMemberPath="Code"
						SelectedItem="{Binding DualCoin}">
						<controls:KbComboBox.Toolbar>
							<WrapPanel HorizontalAlignment="Right">
								<controls:KbButton
									Margin="4 2"
									BorderThickness="0"
									Height="24"
									Padding="4 0"
									Command="{x:Static vm:AppStatic.ShowCoins}"
									CommandParameter="{Binding DualCoin}"
									Background="{StaticResource IconFillColor}"
									CornerRadius="2">
									<WrapPanel>
										<Path
											Width="14"
											Height="14"
											Data="{StaticResource Icon_Coin}"
											Fill="White"
											Stretch="Fill" />
										<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
									</WrapPanel>
								</controls:KbButton>
							</WrapPanel>
						</controls:KbComboBox.Toolbar>
						<controls:KbComboBox.ContextMenuEx>
							<ContextMenu>
								<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ShowCoins}" CommandParameter="{Binding DualCoin}">
								</MenuItem>
							</ContextMenu>
						</controls:KbComboBox.ContextMenuEx>
					</controls:KbComboBox>
					<WrapPanel Margin="0 0 20 0">
						<TextBlock Style="{StaticResource LblTb}" Text="双挖币矿池" />
						<controls:KbComboBox 
							Width="120"
							ItemsSource="{Binding DualCoin.OptionPools}"
							DisplayMemberPath="Name"
							SelectedValuePath="Server"
							SelectedItem="{Binding DualCoinPool}">
							<controls:KbComboBox.Toolbar>
								<WrapPanel HorizontalAlignment="Right">
									<controls:KbButton
										Margin="4 2"
										BorderThickness="0"
										Height="24"
										Padding="4 0"
										Command="{x:Static vm:AppStatic.ManagePools}"
										CommandParameter="{Binding DualCoin}"
										Background="{StaticResource IconFillColor}"
										CornerRadius="2">
										<WrapPanel>
											<Path
												Width="14"
												Height="14"
												Data="{StaticResource Icon_Pool}"
												Fill="White"
												Stretch="Fill" />
											<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
										</WrapPanel>
									</controls:KbButton>
								</WrapPanel>
							</controls:KbComboBox.Toolbar>
							<controls:KbComboBox.ContextMenuEx>
								<ContextMenu>
									<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManagePools}" CommandParameter="{Binding DualCoin}">
									</MenuItem>
								</ContextMenu>
							</controls:KbComboBox.ContextMenuEx>
						</controls:KbComboBox>
					</WrapPanel>
					<WrapPanel>
						<TextBlock Style="{StaticResource LblTb}" Text="双挖币钱包" />
						<TextBox VerticalContentAlignment="Center" Text="{Binding DualCoinWallet}" Width="160" Background="White"></TextBox>
					</WrapPanel>
				</WrapPanel>
			</WrapPanel>
			<WrapPanel>
				<TextBlock Style="{StaticResource LblTb}" Text="分组" />
				<controls:KbComboBox 
					Margin="0 0 20 0"
					Width="100"
					ItemsSource="{Binding MinerGroupVmItems}"
					DisplayMemberPath="Name"
					SelectedItem="{Binding SelectedMinerGroup}">
					<controls:KbComboBox.Toolbar>
						<WrapPanel HorizontalAlignment="Right">
							<controls:KbButton
								Margin="4 2"
								BorderThickness="0"
								Height="24"
								Padding="4 0"
								Command="{x:Static vm:AppStatic.ManageMinerGroup}"
								Background="{StaticResource IconFillColor}"
								CornerRadius="2">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_MinerGroup}"
										Fill="White"
										Stretch="Fill" />
									<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
								</WrapPanel>
							</controls:KbButton>
						</WrapPanel>
					</controls:KbComboBox.Toolbar>
					<controls:KbComboBox.ContextMenuEx>
						<ContextMenu>
							<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManageMinerGroup}">
							</MenuItem>
						</ContextMenu>
					</controls:KbComboBox.ContextMenuEx>
				</controls:KbComboBox>
				<TextBlock Style="{StaticResource LblTb}" Text="作业" />
				<controls:KbComboBox 
					Margin="0 0 36 0"
					Width="120"
					ItemsSource="{Binding MineWorkVms.MineWorkVmItems}"
					DisplayMemberPath="Name"
					SelectedItem="{Binding SelectedMineWork}">
					<controls:KbComboBox.Toolbar>
						<WrapPanel HorizontalAlignment="Right">
							<controls:KbButton
								Margin="4 2"
								BorderThickness="0"
								Height="24"
								Padding="4 0"
								Command="{x:Static vm:AppStatic.ManageMineWork}"
								Background="{StaticResource IconFillColor}"
								CornerRadius="2">
								<WrapPanel>
									<Path
										Width="14"
										Height="14"
										Data="{StaticResource Icon_MineWork}"
										Fill="White"
										Stretch="Fill" />
									<TextBlock Margin="4 0 0 0" Text="管理" Foreground="White"></TextBlock>
								</WrapPanel>
							</controls:KbButton>
						</WrapPanel>
					</controls:KbComboBox.Toolbar>
					<controls:KbComboBox.ContextMenuEx>
						<ContextMenu>
							<MenuItem Header="管理" Command="{x:Static vm:AppStatic.ManageMineWork}">
							</MenuItem>
						</ContextMenu>
					</controls:KbComboBox.ContextMenuEx>
				</controls:KbComboBox>
				<WrapPanel Margin="0 0 10 0">
					<TextBlock Style="{StaticResource LblTb}">IP</TextBlock>
					<TextBox VerticalContentAlignment="Center" Width="100" Text="{Binding MinerIp, ValidatesOnExceptions=True}" Background="White"></TextBox>
					<TextBlock Style="{StaticResource LblTb}" Margin="8 0 0 0">矿工名</TextBlock>
					<TextBox VerticalContentAlignment="Center" Width="100" Text="{Binding MinerName}" Background="White"></TextBox>
					<TextBlock Style="{StaticResource LblTb}" Margin="8 0 0 0">内核</TextBlock>
					<TextBox VerticalContentAlignment="Center" ToolTip="内核名以次开头的内核" Width="100" Text="{Binding Kernel}" Background="White"></TextBox>
				</WrapPanel>
				<WrapPanel>
					<TextBlock Style="{StaticResource LblTb}">客户端版本</TextBlock>
					<TextBox VerticalContentAlignment="Center" ToolTip="客户端版本号以此开头的客户端" Width="100" Text="{Binding Version}" Background="White"></TextBox>
