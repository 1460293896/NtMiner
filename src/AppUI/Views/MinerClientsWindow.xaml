                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--GpuInfo-->
                <DataGridTemplateColumn 
                    Visibility="{Binding Data.ColumnsShow.GpuInfo,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
                    CanUserResize="True" 
                    CanUserReorder="False" 
                    CanUserSort="False" 
                    IsReadOnly="True">
                    <DataGridTemplateColumn.Header>
                        <WrapPanel>
                            <TextBlock>显卡</TextBlock>
                            <controls:KbButton
                                ToolTip="不展示"
                                Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
                                CommandParameter="GpuInfo"
                                Background="Transparent">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="8"
                                        Data="{StaticResource Icon_Hide}"
                                        Fill="#FF5A5A5A"
                                        Stretch="Fill" />
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBox 
                                    BorderThickness="0"
                                    Background="Transparent"
                                    IsReadOnly="True"
                                    ToolTip="{Binding GpuInfo}"
                                    Text="{Binding GpuInfo, Mode=OneWay}"></TextBox>
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--KernelCommandLine-->
                <DataGridTemplateColumn 
                    Visibility="{Binding Data.ColumnsShow.KernelCommandLine,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
                    CanUserResize="True" 
                    CanUserReorder="False" 
                    CanUserSort="False" 
                    IsReadOnly="True">
                    <DataGridTemplateColumn.Header>
                        <WrapPanel>
                            <TextBlock>内核命令行</TextBlock>
                            <controls:KbButton
                                ToolTip="不展示"
                                Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
                                CommandParameter="KernelCommandLine"
                                Background="Transparent">
                                <WrapPanel>
                                    <Path
                                        Width="14"
                                        Height="8"
                                        Data="{StaticResource Icon_Hide}"
                                        Fill="#FF5A5A5A"
                                        Stretch="Fill" />
                                </WrapPanel>
                            </controls:KbButton>
                        </WrapPanel>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBox 
                                    BorderThickness="0"
                                    Background="Transparent"
                                    IsReadOnly="True"
                                    ToolTip="{Binding KernelCommandLine}"
                                    Text="{Binding KernelCommandLine, Mode=OneWay}"></TextBox>
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="#F5F4F5">
            <TextBlock Margin="4 0 0 0">冻结前</TextBlock>
            <TextBox TextAlignment="Center" Padding="4 0" Height="16" Text="{Binding FrozenColumnCount, UpdateSourceTrigger=PropertyChanged}" Width="20" ToolTip="最小值2"></TextBox>
            <TextBlock>列</TextBlock>
        </WrapPanel>
        <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding MinerClients, Converter={StaticResource NoRecordVisibilityConverter}}" Foreground="Red" Text="没有记录"></TextBlock>
        <notification:NotificationMessageContainer 
            Margin="0 4 0 0"
            Grid.Row="0"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            MaxWidth="500"
            Manager="{Binding Manager}" />
        <GridSplitter Grid.Row="2" Height="6" Background="{StaticResource MinerProfileBackground}" VerticalAlignment="Top" HorizontalAlignment="Stretch"></GridSplitter>
        <Grid Grid.Row="2" Background="{StaticResource MinerProfileBackground}" Margin="0 6 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1000"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource MinerProfileBackground}">
                <Button Command="{Binding PageFirst}" IsEnabled="{Binding IsPageUpEnabled}">首页</Button>
                <Button
                    Width="26" Margin="4 0 0 0"
                    Command="{Binding PageUp}" 
                    IsEnabled="{Binding IsPageUpEnabled}" 
                    Content="&lt;"
                    ToolTip="上一页">
                </Button>
                <Button
                    Width="26" Margin="4 0 0 0"
                    Command="{Binding PageDown}" 
                    IsEnabled="{Binding IsPageDownEnabled}" 
                    Content="&gt;"
                    ToolTip="下一页">
                </Button>
                <Button
                    Width="26" Margin="4 0 0 0"
                    Command="{Binding PageRefresh}">
                    <Path 
                        Width="14"
                        Height="14"
                        Stretch="Fill"
                        Fill="{StaticResource IconFillColor}"
                        Data="{StaticResource Icon_Refresh}"></Path>
                </Button>
                <Button Command="{Binding PageLast}" IsEnabled="{Binding IsPageDownEnabled}" Margin="4 0 0 0">尾页</Button>
                <Label>第</Label>
                <TextBox VerticalContentAlignment="Center" Padding="4 0" Text="{Binding MinerClientPageIndex}"></TextBox>
                <Label>/</Label>
                <TextBlock VerticalAlignment="Center" Text="{Binding MinerClientPageCount}"></TextBlock>
                <Label>页，每页</Label>
                <controls:KbComboBox ItemsSource="{Binding PageSizeItems}" SelectedItem="{Binding MinerClientPageSize}">
                </controls:KbComboBox>
                <Label>条，共</Label>
                <TextBlock VerticalAlignment="Center" Text="{Binding MinerClientTotal}"></TextBlock>
                <Label>条</Label>

                <WrapPanel VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Margin="4 0 0 0">列显</TextBlock>
                    <controls:KbComboBox 
                        Margin="0 0 4 0"
                        ItemsSource="{Binding ColumnsShows.List}"
                        DisplayMemberPath="ColumnsShowName"
                        SelectedItem="{Binding ColumnsShow}">
                        <controls:KbComboBox.Toolbar>
                            <WrapPanel HorizontalAlignment="Right">
                                <controls:KbButton
                                    Margin="4 2"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="4 0"
                                    Command="{Binding ColumnsShows.Add}"
                                    Background="{StaticResource ThemeBackground}"
                                    CornerRadius="2">
                                    <WrapPanel>
                                        <Path
                                            Width="14"
                                            Height="14"
                                            Data="{StaticResource Icon_Add}"
                                            Fill="{StaticResource ThemeForeground}"
                                            Stretch="Fill" />
                                        <TextBlock Margin="4 0 0 0" Text="新建" Foreground="{StaticResource ThemeForeground}"></TextBlock>
                                    </WrapPanel>
                                </controls:KbButton>
                            </WrapPanel>
                        </controls:KbComboBox.Toolbar>
                        <controls:KbComboBox.ContextMenuEx>
                            <ContextMenu>
                                <MenuItem Header="新建" Command="{Binding ColumnsShows.Add}">
                                </MenuItem>
                                <MenuItem Header="删除" Command="{Binding ColumnsShow.Remove}" IsEnabled="{Binding ColumnsShow.IsPleaseSelect, Converter={StaticResource BoolInvertConverter}}">
                                </MenuItem>
                            </ContextMenu>
                        </controls:KbComboBox.ContextMenuEx>
                    </controls:KbComboBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.LastActivedOnText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.LastActivedOnText}" Margin="0 0 6 0">最后更新</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.BootTimeSpanText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.BootTimeSpanText}" Margin="0 0 6 0">运行时长</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MineTimeSpanText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MineTimeSpanText}" Margin="0 0 6 0">挖矿时长</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.Work, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Work}" Margin="0 0 6 0">作业</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MinerGroup, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerGroup}" Margin="0 0 6 0">分组</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MinerName, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerName}" Margin="0 0 6 0">矿工名</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MinerIp, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MinerIp}" Margin="0 0 6 0">IP</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.WindowsLoginNameAndPassword, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.WindowsLoginNameAndPassword}" Margin="0 0 6 0">远程桌面用户名密码</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MainCoinCode, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinCode}" Margin="0 0 6 0">主挖币种</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MainCoinSpeedText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinSpeedText}" Margin="0 0 6 0">主币算力</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MainCoinRejectPercentText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinRejectPercentText}" Margin="0 0 6 0">主币拒绝</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.DualCoinCode, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinCode}" Margin="0 0 6 0">双挖币种</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.DualCoinSpeedText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinSpeedText}" Margin="0 0 6 0">双挖币算力</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.DualCoinRejectPercentText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinRejectPercentText}" Margin="0 0 6 0">双挖币拒绝</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.TotalPowerText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.TotalPowerText}" Margin="0 0 6 0">功耗</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MaxTempText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MaxTempText}" Margin="0 0 6 0">最高卡温</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.IncomeMainCoinPerDayText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IncomeMainCoinPerDayText}" Margin="0 0 6 0">主币预期收益</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.IncomeDualCoinPerDayText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IncomeDualCoinPerDayText}" Margin="0 0 6 0">双挖币预期收益</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.GpuTableTrs, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuTableTrs}" Margin="0 0 6 0">显卡表格</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MainCoinWallet, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinWallet}" Margin="0 0 6 0">主币钱包</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.MainCoinPool, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.MainCoinPool}" Margin="0 0 6 0">主币矿池</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.Kernel, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Kernel}" Margin="0 0 6 0">内核</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.DualCoinWallet, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinWallet}" Margin="0 0 6 0">双挖币钱包</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.DualCoinPool, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.DualCoinPool}" Margin="0 0 6 0">双挖币矿池</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.Version, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.Version}" Margin="0 0 6 0">客户端版本</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.OSName, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.OSName}" Margin="0 0 6 0">操作系统</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.OSVirtualMemoryGbText, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.OSVirtualMemoryGbText}" Margin="0 0 6 0">虚拟内存</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.IsAutoBoot, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IsAutoBoot}" Margin="0 0 6 0">开机自动启动</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.IsAutoStart, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.IsAutoStart}" Margin="0 0 6 0">启动后自动开始挖矿</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.GpuType, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuType}" Margin="0 0 6 0">显卡类型</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.GpuDriver, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuDriver}" Margin="0 0 6 0">显卡驱动</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.GpuInfo, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.GpuInfo}" Margin="0 0 6 0">显卡</CheckBox>
                    <CheckBox VerticalAlignment="Center" Visibility="{Binding ColumnsShow.KernelCommandLine, Converter={StaticResource BoolToVisibilityInvertConverter}}" IsChecked="{Binding ColumnsShow.KernelCommandLine}" Margin="0 0 6 0">内核命令行</CheckBox>
                </WrapPanel>
            </WrapPanel>
            <ScrollViewer 
                Grid.Row="1" Grid.Column="0" 
                PreviewMouseDown="ScrollViewer_PreviewMouseDown"
                VerticalScrollBarVisibility="Auto"
                Visibility="{Binding CurrentMinerClient,Converter={StaticResource NotNullOrEmptyVisibilityConverter}}">
                <uc:MinerClientUc DataContext="{Binding CurrentMinerClient}"></uc:MinerClientUc>
            </ScrollViewer>
            <uc:MessageCenter Grid.Row="1" Grid.Column="1"></uc:MessageCenter>
            <GridSplitter Grid.Row="1" Grid.Column="1" Width="6" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Stretch"></GridSplitter>
        </Grid>
        <WrapPanel Grid.Row="3" Background="{StaticResource MinerProfileBackground}">
            <WrapPanel Margin="4 0 0 0">
                <TextBlock VerticalAlignment="Center">卡温达到</TextBlock>
                <Slider 
                    Minimum="0" 
                    Maximum="100" 
                    Width="100"
                    IsSnapToTickEnabled="True"
                    Value="{Binding MaxTemp}"></Slider>
                <TextBlock VerticalAlignment="Center" Text="{Binding MaxTemp}" Width="20"></TextBlock>
                <TextBlock VerticalAlignment="Center">℃红色，</TextBlock>
            </WrapPanel>
            <WrapPanel Margin="20 0 0 0">
                <TextBlock VerticalAlignment="Center">卡温低于</TextBlock>
                <Slider 
                    Minimum="0" 
                    Maximum="100" 
                    Width="100"
                    IsSnapToTickEnabled="True"
                    Value="{Binding MinTemp}"></Slider>
                <TextBlock VerticalAlignment="Center" Text="{Binding MinTemp}" Width="20"></TextBlock>
                <TextBlock VerticalAlignment="Center">℃蓝色，</TextBlock>
            </WrapPanel>
            <WrapPanel Margin="20 0 0 0">
                <TextBlock VerticalAlignment="Center">拒绝率达到</TextBlock>
                <Slider 
                    Minimum="0" 
                    Maximum="20" 
                    Width="100"
                    IsSnapToTickEnabled="True"
                    Value="{Binding RejectPercent}"></Slider>
                <TextBlock VerticalAlignment="Center" Text="{Binding RejectPercent}" Width="20"></TextBlock>
                <TextBlock VerticalAlignment="Center">%红色，</TextBlock>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</metro:MetroWindow>
