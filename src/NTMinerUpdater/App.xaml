<Application x:Class="NTMiner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:NTMiner.Converters;assembly=NTMinerWpf"
             ShutdownMode="OnMainWindowClose"
             xmlns:local="clr-namespace:NTMiner">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/KbSkin.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/KbIcon.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/KbButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/ScrollViewer.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NTMinerWpf;component/Styles/DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToVisibilityInvertConverter x:Key="BoolToVisibilityInvertConverter" />
            <converters:PercentToLengthConverter x:Key="PercentToLengthConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
